page {
  background: #fdfbf7; /* æš–ç±³è‰² */
  padding-bottom: 40rpx;
  font-family: -apple-system, 'Helvetica Neue', sans-serif;
}

.history-container { padding: 40rpx; }

.timeline-header { margin-bottom: 50rpx; }
.title { font-size: 48rpx; font-weight: 800; color: #5d4037; display: block; margin-bottom: 8rpx; }
.subtitle { font-size: 26rpx; color: #a1887f; text-transform: uppercase; letter-spacing: 2rpx; display: block; }

/* === ğŸ†• æƒŠå–œé‡Œç¨‹ç¢‘å¡ç‰‡ (å‡çº§ç‰ˆ) === */
.surprise-banner {
  margin-top: 30rpx;
  background: #fffbf0; /* æš–é»„ä¿¡çº¸è‰² */
  border: 2rpx dashed #ffb7b2; 
  border-radius: 20rpx;
  padding: 24rpx 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 20rpx rgba(255, 183, 178, 0.15);
}

.gift-box {
  width: 80rpx; height: 80rpx;
  background: #ffe4e8;
  border-radius: 50%;
  display: flex; align-items: center; justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.gift-icon {
  font-size: 40rpx;
  /* ç¤¼ç‰©ç›’è·³åŠ¨åŠ¨ç”» */
  animation: bounce 2s infinite ease-in-out;
}

.gift-content { display: flex; flex-direction: column; }

.gift-title {
  font-size: 28rpx; color: #5d4037; font-weight: bold; margin-bottom: 6rpx;
}
.days-highlight {
  color: #ff6b81; font-size: 32rpx; font-family: 'Courier New', monospace;
}

.gift-desc {
  font-size: 22rpx; color: #a1887f;
}
.days-left {
  color: #ed7876; font-weight: bold; margin: 0 4rpx;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0) scale(1); }
  50% { transform: translateY(-6rpx) scale(1.1); }
}

/* === æ—¶é—´è½´å¸ƒå±€ (ä¿æŒä¸å˜) === */
.timeline-content { position: relative; }
.timeline-item { display: flex; margin-bottom: 40rpx; }
.time-node { margin-right: 30rpx; position: relative; display: flex; flex-direction: column; align-items: center; }
.dot { width: 20rpx; height: 20rpx; background: #ff6b81; border-radius: 50%; border: 4rpx solid #fff; box-shadow: 0 0 0 4rpx #ffcad4; z-index: 2; }
.line { width: 4rpx; flex: 1; background: #e0e0e0; margin-top: 10rpx; min-height: 100rpx; }
.timeline-item:last-child .line { display: none; }

.memory-card { flex: 1; background: #fff; border-radius: 16rpx; padding: 24rpx; box-shadow: 0 8rpx 24rpx rgba(149, 157, 165, 0.08); }
.card-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 16rpx; }
.user-tag { font-size: 20rpx; font-weight: bold; padding: 4rpx 12rpx; border-radius: 20rpx; }

.mine-card .user-tag { background: #5d4037; color: #fff; }
.partner-card { border: 2rpx solid #ffe4e8; background: #fffdfd; }
.partner-card .user-tag { background: #ff6b81; color: #fff; }

.card-date { font-size: 22rpx; color: #ccc; font-family: 'Courier New', monospace; }
.card-img { width: 100%; height: 300rpx; border-radius: 8rpx; background-color: #f0f0f0; margin-bottom: 16rpx; object-fit: cover; }
.card-tag { display: inline-block; font-size: 20rpx; background: #f0f7ff; color: #8daac7; padding: 6rpx 16rpx; border-radius: 20rpx; }

.empty-state { text-align: center; color: #b0a4a4; margin-top: 120rpx; font-size: 26rpx; padding: 0 40rpx; line-height: 1.6; }