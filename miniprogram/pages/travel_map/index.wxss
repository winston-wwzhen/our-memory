page {
  background: #fdfbf7;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', sans-serif;
}

.travel-map-container {
  padding: 20rpx;
  padding-bottom: 40rpx;
  min-height: 100vh;
}

/* Page Header */
.page-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  position: relative;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  margin-right: 20rpx;
}

.back-icon {
  font-size: 32rpx;
  color: #666;
  font-weight: bold;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* Pet Status Bar */
.pet-status-bar {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.status-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

/* üü¢ Êñ∞Â¢ûÔºöÈ£üÁâ©ËÉ∂ÂõäÊ†∑Âºè */
.food-status {
  flex: 1.5; /* Áªô‰∏≠Èó¥ÁöÑÈ£üÁâ©Ê†èÂ§ö‰∏ÄÁÇπÁ©∫Èó¥ */
}

.food-count {
  display: flex;
  gap: 12rpx;
  margin-top: 4rpx;
}

.food-pill {
  display: flex;
  align-items: center;
  background: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #333;
  gap: 6rpx;
}

.status-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.status-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 4rpx;
}

.status-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.food-count {
  display: flex;
  gap: 20rpx;
}

.food-item {
  font-size: 24rpx;
  color: #333;
}

/* Paper Texture */
.paper-texture {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(149, 157, 165, 0.08);
  position: relative;
}

/* Loading State */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* Empty State */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
}

/* Destinations Container */
.destinations-scroll {
  height: calc(100vh - 300rpx);
}

.destinations-section {
  margin-bottom: 40rpx;
}

.section-title {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
}

/* Destination Card */
.destination-card {
  margin-bottom: 20rpx;
  overflow: hidden;
  position: relative;
}

.destination-image {
  width: 100%;
  height: 300rpx;
  background: #f5f5f5;
}

.destination-info {
  padding: 24rpx;
}

.destination-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.destination-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.lock-badge {
  display: flex;
  align-items: center;
  background: #ffe0e0;
  padding: 6rpx 12rpx;
  border-radius: 20rpx;
}

.lock-icon {
  font-size: 20rpx;
  margin-right: 4rpx;
}

.lock-text {
  font-size: 20rpx;
  color: #ff4444;
}

.destination-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

/* Travel Requirements */
.travel-requirements {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 24rpx;
  padding: 16rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}

.requirement-item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
}

.req-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
  width: 32rpx;
}

.req-text {
  color: #666;
  margin-right: auto;
}

.req-value {
  color: #333;
  font-weight: 500;
}

/* Destination Actions */
.destination-actions {
  display: flex;
  justify-content: flex-end;
}

.action-btn {
  min-width: 160rpx;
  height: 64rpx;
  line-height: 64rpx;
  padding: 0 32rpx;
  font-size: 26rpx;
  border-radius: 32rpx;
  border: none;
}

.unlock-btn {
  background: #e0e0e0;
  color: #999;
}

.travel-btn {
  background: linear-gradient(135deg, #ff9a9e, #ff6b81);
  color: #fff;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 129, 0.3);
}

/* Locked Destination Card */
.destination-card.locked {
  opacity: 0.7;
}

.destination-card.locked .destination-image {
  filter: grayscale(50%);
}

.unlock-hint {
  display: flex;
  align-items: center;
  padding: 16rpx;
  background: #fff9e6;
  border-radius: 12rpx;
  margin-top: 16rpx;
}

.hint-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.hint-text {
  font-size: 24rpx;
  color: #b8860b;
}

/* Travel Modal */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.modal-mask.show {
  opacity: 1;
  visibility: visible;
}

.travel-modal {
  width: 80%;
  max-width: 600rpx;
  max-height: 80vh;
  padding: 0;
  border-radius: 24rpx;
  overflow: hidden;
  animation: modalSlideIn 0.3s ease;
}

@keyframes modalSlideIn {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #999;
  background: #f5f5f5;
  border-radius: 50%;
}

/* Modal Content */
.modal-content {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.modal-destination-image {
  width: 100%;
  height: 200rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.modal-destination-name {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 10rpx;
}

.modal-travel-time {
  display: block;
  font-size: 26rpx;
  color: #666;
  text-align: center;
  margin-bottom: 30rpx;
}

/* Modal Costs */
.modal-costs {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}

.cost-item {
  display: flex;
  align-items: center;
  font-size: 26rpx;
}

.cost-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.cost-text {
  color: #666;
  margin-right: auto;
}

.cost-value {
  color: #333;
  font-weight: bold;
}

/* Food Selection */
.food-selection {
  margin-bottom: 30rpx;
}

.selection-title {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.food-option {
  display: flex;
  align-items: center;
  padding: 16rpx;
  margin-bottom: 12rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}

.food-option radio {
  margin-right: 16rpx;
}

.food-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.food-name {
  font-size: 26rpx;
  color: #333;
}

.food-count {
  font-size: 24rpx;
  color: #999;
}

.food-effect {
  font-size: 24rpx;
  color: #4caf50;
  margin-left: auto;
}

/* No Food Warning */
.no-food-warning {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  text-align: center;
}

.warning-icon {
  font-size: 60rpx;
  margin-bottom: 16rpx;
}

.warning-text {
  font-size: 28rpx;
  color: #ff4444;
  margin-bottom: 8rpx;
}

.warning-desc {
  font-size: 24rpx;
  color: #999;
}

/* Modal Actions */
.modal-actions {
  display: flex;
  padding: 20rpx 30rpx 30rpx;
  gap: 20rpx;
}

.modal-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  border-radius: 40rpx;
  border: none;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background: linear-gradient(135deg, #ff9a9e, #ff6b81);
  color: #fff;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 129, 0.3);
}

.confirm-btn.disabled {
  background: #e0e0e0;
  color: #999;
  box-shadow: none;
}