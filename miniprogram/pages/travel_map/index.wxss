/* miniprogram/pages/travel_map/index.wxss */
page {
  background: #fdfbf7;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', sans-serif;
  box-sizing: border-box;
}

.travel-map-container {
  padding: 24rpx;
  min-height: 100vh;
}

/* --- Dashboard Style Status Bar (‰øùÊåÅ‰∏çÂèò) --- */
.dashboard-card {
  background: #fff;
  padding: 24rpx;
  margin-bottom: 30rpx;
}

.dashboard-row {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
}

.status-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.status-icon-bg {
  width: 70rpx;
  height: 70rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.energy-bg { background: #fff7e6; color: #ff9800; }
.mood-bg { background: #ffe6e9; color: #ff4081; }

.status-info {
  display: flex;
  flex-direction: column;
}

.status-label {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 4rpx;
}

.status-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.dashboard-divider {
  height: 2rpx;
  background: #f5f5f5;
  margin: 10rpx 0 20rpx;
}

.inventory-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.inventory-label {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

.food-badges {
  display: flex;
  gap: 16rpx;
}

.food-badge {
  background: #f0f2f5;
  padding: 8rpx 16rpx;
  border-radius: 24rpx;
  font-size: 22rpx;
  color: #333;
}

.food-badge.luxury {
  background: #fff0f0;
  color: #d81b60;
}

/* --- Paper Texture & Common --- */
.paper-texture {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

/* --- üü¢ NEW: Traveling Status Card Styles --- */
.traveling-container {
  padding-top: 20rpx;
  animation: fadeIn 0.5s ease;
}

.travel-status-card {
  overflow: hidden;
  padding: 0;
  margin-bottom: 40rpx;
}

.travel-header {
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #f5f5f5;
}

.travel-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.pulsing-dot {
  width: 16rpx;
  height: 16rpx;
  background-color: #4caf50;
  border-radius: 50%;
  box-shadow: 0 0 0 0 rgba(76, 175, 80, 0.7);
  animation: pulse-green 2s infinite;
}

.travel-visual {
  position: relative;
  height: 360rpx;
  width: 100%;
}

.travel-dest-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.travel-overlay {
  position: absolute;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  backdrop-filter: blur(2px);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #fff;
}

.travel-countdown {
  font-size: 72rpx;
  font-weight: bold;
  font-variant-numeric: tabular-nums; /* ÈÅøÂÖçÊï∞Â≠óË∑≥Âä® */
  text-shadow: 0 4rpx 8rpx rgba(0,0,0,0.2);
  margin-bottom: 10rpx;
}

.travel-label {
  font-size: 26rpx;
  opacity: 0.9;
}

.travel-info-row {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fff;
}

.travel-dest-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.travel-tip {
  font-size: 24rpx;
  color: #999;
}

@keyframes pulse-green {
  0% { transform: scale(0.95); box-shadow: 0 0 0 0 rgba(76, 175, 80, 0.7); }
  70% { transform: scale(1); box-shadow: 0 0 0 10px rgba(76, 175, 80, 0); }
  100% { transform: scale(0.95); box-shadow: 0 0 0 0 rgba(76, 175, 80, 0); }
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

/* --- Destinations List --- */
.destinations-scroll {
  /* ÂáèÂéªÈ°∂ÈÉ®DashboardÁöÑÈ´òÂ∫¶È¢Ñ‰º∞ */
  height: calc(100vh - 280rpx); 
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding-left: 8rpx;
}

.section-icon { margin-right: 10rpx; font-size: 28rpx; }
.section-title { font-size: 30rpx; font-weight: bold; color: #333; }

/* Destination Card */
.destination-card {
  margin-bottom: 30rpx;
  overflow: hidden;
  transition: transform 0.1s;
}

.destination-card:active {
  transform: scale(0.98);
}

.destination-image {
  width: 100%;
  height: 280rpx;
  background: #eee;
}

.destination-content {
  padding: 24rpx;
}

.card-top {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.destination-name {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.tag-time {
  background: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  color: #666;
}

.destination-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 24rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1rpx solid #f9f9f9;
  padding-top: 20rpx;
}

.req-tag {
  font-size: 24rpx;
  color: #ff9a9e;
  background: #fff0f0;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.go-btn-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #ff6b81;
}

/* Locked State */
.destination-card.locked {
  position: relative;
}

.destination-card.locked .destination-image {
  filter: grayscale(80%) blur(2px);
}

.locked-overlay {
  position: absolute;
  top: 0; left: 0; right: 0;
  height: 280rpx; /* Matches image height */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 10;
  background: rgba(0,0,0,0.2);
  color: #fff;
}

.lock-big-icon { font-size: 48rpx; margin-bottom: 10rpx; }
.lock-condition { font-size: 28rpx; font-weight: bold; text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.3); }

.unlock-hint-box {
  background: #fffbe6;
  padding: 16rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: flex-start;
}

.hint-icon { margin-right: 10rpx; }
.hint-text { font-size: 24rpx; color: #b8860b; flex: 1; }

/* --- Modal --- */
.modal-mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 999;
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
}

.modal-mask.show {
  opacity: 1;
  visibility: visible;
}

.travel-modal {
  width: 85%;
  max-width: 600rpx;
  overflow: hidden;
  background: #fff;
}

.modal-header {
  padding: 30rpx;
  text-align: center;
  position: relative;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title { font-size: 32rpx; font-weight: bold; }
.close-btn {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  color: #ccc;
  font-size: 40rpx;
  line-height: 40rpx;
}

.modal-content { padding: 30rpx; }

.modal-destination-image {
  width: 100%;
  height: 240rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.modal-destination-name {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
}

.modal-info-grid {
  display: flex;
  background: #f9f9f9;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.info-cell {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.cell-label { font-size: 24rpx; color: #999; margin-bottom: 8rpx; }
.cell-value { font-size: 28rpx; font-weight: 500; color: #333; }

.area-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
  font-weight: 500;
}

.food-option-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border: 2rpx solid #eee;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  transition: all 0.2s;
}

.food-option-item.selected {
  border-color: #ff9a9e;
  background: #fff0f0;
}

.food-option-left { display: flex; align-items: center; }
.food-details { display: flex; flex-direction: column; margin-left: 16rpx; }
.food-name { font-size: 28rpx; color: #333; }
.food-bonus { font-size: 22rpx; color: #ff6b81; }
.food-count-badge { font-size: 26rpx; color: #999; }

.no-food-warning {
  text-align: center;
  color: #ff4444;
  font-size: 26rpx;
  padding: 20rpx;
  background: #fff0f0;
  border-radius: 12rpx;
}

.modal-actions {
  padding: 30rpx;
  display: flex;
  gap: 24rpx;
}

.modal-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: bold;
  border: none;
}

.cancel-btn { background: #f5f5f5; color: #666; }
.confirm-btn { 
  background: linear-gradient(135deg, #ff9a9e, #ff6b81);
  color: #fff;
  box-shadow: 0 6rpx 16rpx rgba(255, 107, 129, 0.3);
}
.confirm-btn.disabled {
  background: #e0e0e0;
  box-shadow: none;
  color: #999;
}

/* Empty State */
.empty-state {
  text-align: center;
  padding-top: 100rpx;
}
.empty-icon { font-size: 80rpx; display: block; margin-bottom: 20rpx; }
.empty-text { font-size: 32rpx; color: #333; margin-bottom: 10rpx; display: block; }
.empty-desc { font-size: 24rpx; color: #999; }
.loading-container { text-align: center; padding-top: 100rpx; color: #999; font-size: 28rpx; }