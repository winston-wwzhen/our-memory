/* miniprogram/pages/mine/index.wxss */
page {
  background-color: #f6f3e8; /* 柔和的米黄色背景 */
  font-family: -apple-system, "PingFang SC", "Microsoft YaHei", sans-serif;
  color: #5d4037; /* 深棕色文字，比黑色更温暖 */
}

.mine-container {
  padding: 40rpx;
}

/* === 个人身份卡 (拍立得风格) === */
.profile-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 60rpx 40rpx 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(139, 126, 102, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  margin-bottom: 50rpx;
  transform: rotate(-1deg); /* 微微倾斜，更自然 */
}

/* 装饰图钉 */
.pin-decoration {
  width: 24rpx;
  height: 24rpx;
  background: #ed7876; /* 红色图钉 */
  border-radius: 50%;
  position: absolute;
  top: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.2);
}

.avatar-wrapper {
  padding: 0;
  width: 180rpx !important;
  height: 180rpx !important;
  border-radius: 50%;
  background: #f0f0f0;
  border: 8rpx solid #fff;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  margin-bottom: 24rpx;
  overflow: hidden;
}
.avatar-wrapper::after { border: none; }

.avatar-img { width: 100%; height: 100%; }

.edit-badge {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: rgba(93, 64, 55, 0.6);
  color: #fff;
  font-size: 20rpx;
  text-align: center;
  padding: 4rpx 0;
}

.info-area {
  width: 100%;
  text-align: center;
  margin-bottom: 30rpx;
}

.nickname-input {
  font-size: 36rpx;
  font-weight: bold;
  color: #5d4037;
  height: 60rpx;
  text-align: center;
}
.placeholder-style { color: #d7ccc8; }

.save-hint {
  font-size: 22rpx;
  color: #ed7876;
  text-decoration: underline;
  margin-top: 10rpx;
}

/* 状态印章 */
.status-stamp {
  border: 4rpx solid;
  padding: 10rpx 30rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: bold;
  transform: rotate(-5deg); /* 印章倾斜 */
  opacity: 0.8;
}
.stamp-single {
  border-color: #a1887f;
  color: #a1887f;
}
.stamp-connected {
  border-color: #ed7876;
  color: #ed7876;
}

/* === 邀请信封卡片 === */
.envelope-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(139, 126, 102, 0.1);
  background-image: repeating-linear-gradient(#fff 0px, #fff 48rpx, #f5f0e1 50rpx); /* 信纸纹路 */
}

.envelope-header {
  text-align: center;
  margin-bottom: 40rpx;
}
.envelope-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #5d4037;
  display: block;
}
.envelope-sub {
  font-size: 22rpx;
  color: #8d6e63;
  margin-top: 8rpx;
  display: block;
}

.step-box { margin-bottom: 30rpx; }

.step-label {
  font-size: 26rpx;
  color: #8d6e63;
  margin-bottom: 16rpx;
  display: block;
  font-weight: bold;
}

/* 票据样式的编号显示 */
.code-ticket {
  background: #fcf4dd;
  border: 2rpx dashed #d7ccc8;
  padding: 20rpx;
  border-radius: 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.ticket-num {
  font-family: "Courier New", monospace;
  font-size: 24rpx;
  color: #5d4037;
  width: 80%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.ticket-action {
  font-size: 22rpx;
  color: #ed7876;
  font-weight: bold;
}

.btn-share {
  background: #8d6e63;
  color: #fff;
  font-size: 26rpx;
  border-radius: 40rpx;
  padding: 16rpx 0;
  width: 100% !important;
  font-weight: normal;
}

.dashed-line {
  border-top: 2rpx dashed #d7ccc8;
  margin: 40rpx 0;
  position: relative;
}
.dashed-line::after {
  content: "✂"; /* 剪刀图标 */
  position: absolute;
  right: -10rpx;
  top: -16rpx;
  color: #d7ccc8;
  font-size: 24rpx;
}

.input-paper {
  background: #f9f9f9;
  border-bottom: 2rpx solid #8d6e63; /* 下划线风格 */
  padding: 10rpx 20rpx;
  margin-bottom: 30rpx;
}
.hand-input {
  font-size: 26rpx;
  color: #5d4037;
  width: 100%;
}

.btn-bind {
  background: #ed7876;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
  padding: 20rpx 0;
  width: 100% !important;
  box-shadow: 0 6rpx 12rpx rgba(237, 120, 118, 0.3);
}

/* === 已关联卡片 === */
.connected-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(139, 126, 102, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.love-line {
  display: flex;
  align-items: center;
  width: 60%;
  margin-bottom: 30rpx;
}
.line { flex: 1; height: 2rpx; background: #ed7876; }
.dot { width: 8rpx; height: 8rpx; background: #ed7876; border-radius: 50%; }
.heart { color: #ed7876; margin: 0 20rpx; font-size: 32rpx; }

.connected-text {
  font-size: 28rpx;
  color: #5d4037;
  font-weight: bold;
}
.connected-sub {
  font-size: 24rpx;
  color: #a1887f;
  margin-top: 10rpx;
}

.unbind-area {
  margin-top: 60rpx;
}
.unbind-area text {
  font-size: 22rpx;
  color: #d7ccc8;
  border-bottom: 1rpx solid #d7ccc8;
}

/* 底部 */
.footer {
  text-align: center;
  margin-top: 60rpx;
  padding-bottom: 20rpx;
}
.footer text {
  font-size: 20rpx;
  color: #d7ccc8;
  font-style: italic;
  font-family: serif;
}

/* 按钮点击态 */
button:active, .ticket-action:active {
  opacity: 0.8;
  transform: scale(0.98);
}

/* === 双人头像区域 === */
.cp-avatars {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
}

.cp-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 6rpx solid #fff; /* 白边 */
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.1);
  background-color: #f0f0f0;
}

/* 让两个头像稍微靠近一点，产生重叠感，更亲密 */
.cp-avatar.mine {
  margin-right: -10rpx; /* 向右挤 */
  z-index: 2; /* 压在上面 */
}
.cp-avatar.partner {
  margin-left: -10rpx; /* 向左挤 */
  z-index: 1;
}

.cp-link-heart {
  font-size: 32rpx;
  color: #ed7876;
  margin: 0 24rpx;
  /* 加个小心跳动画 */
  animation: heartBeat 1.5s infinite ease-in-out;
  position: relative;
  top: -20rpx; /* 稍微往上飘一点 */
  z-index: 3;
}

@keyframes heartBeat {
  0% { transform: scale(1); }
  50% { transform: scale(1.3); }
  100% { transform: scale(1); }
}