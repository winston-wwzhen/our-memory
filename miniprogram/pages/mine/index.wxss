/* miniprogram/pages/mine/index.wxss */
page {
  background: #f7f8fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
  --primary: #ff6b81; 
  --text-main: #333;
  --text-sub: #999;
}

.page-container {
  min-height: 100vh;
  padding-bottom: 60rpx;
  position: relative;
}

/* === 1. 顶部沉浸背景 === */
.bg-layer {
  position: absolute;
  top: 0; left: 0; width: 100%; 
  height: 520rpx;
  background: linear-gradient(180deg, #ffdde1 0%, #ffffff 100%);
  z-index: 0;
}
/* 装饰光斑 */
.circle-deco { position: absolute; border-radius: 50%; filter: blur(40px); opacity: 0.6; }
.c1 { width: 300rpx; height: 300rpx; background: #ff9a9e; top: -100rpx; left: -50rpx; }
.c2 { width: 200rpx; height: 200rpx; background: #a18cd1; top: 100rpx; right: -60rpx; opacity: 0.4; }

/* === 2. 核心身份卡片 === */
.profile-card {
  position: relative;
  z-index: 10;
  margin: 180rpx 30rpx 0 30rpx;
  background: rgba(255, 255, 255, 0.95); /* 提高不透明度，遮挡杂乱背景 */
  backdrop-filter: blur(10px);
  border-radius: 36rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 16rpx 40rpx rgba(255, 154, 158, 0.15);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
}

/* 顶部栏 */
.card-top-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 50rpx;
}

.vip-badge {
  display: flex; align-items: center;
  background: #f0f2f5;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  font-size: 22rpx; color: #666; font-weight: bold;
}
.vip-badge.is-vip {
  background: linear-gradient(90deg, #333, #555);
  color: #ffd700;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.2);
}
.vip-badge .icon { margin-right: 8rpx; }

.id-tag {
  font-size: 20rpx; color: #ccc;
  background: rgba(0,0,0,0.03);
  padding: 6rpx 16rpx; border-radius: 10rpx;
  display: flex; align-items: center;
}
.copy-icon { margin-left: 6rpx; font-size: 18rpx; }

/* === 核心修复区：头像互动区 === */
.avatars-area {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 10rpx;
  margin-bottom: 40rpx;
  height: 160rpx; /* 固定高度，防止塌陷 */
}

/* 统一重置所有 Button 样式 (关键修复) */
button.reset-btn {
  background-color: transparent !important;
  padding: 0 !important;
  margin: 0 !important;
  line-height: normal !important;
  border-radius: 0 !important;
  width: auto !important;
  font-weight: normal !important;
}
button.reset-btn::after {
  border: none !important;
  width: 0; 
  height: 0;
}

/* 头像容器 (左 & 右) */
.avatar-wrap {
  width: 130rpx; 
  height: 130rpx;
  position: relative;
  display: flex; 
  align-items: center; 
  justify-content: center;
}

/* 头像图片 */
.avatar-img {
  width: 130rpx; 
  height: 130rpx;
  border-radius: 50%;
  border: 6rpx solid #fff;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.1);
  background-color: #f0f0f0;
}

/* 邀请按钮样式 (虚线圆圈) */
.invite-circle {
  width: 120rpx; 
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx dashed #dcdcdc;
  display: flex; 
  align-items: center; 
  justify-content: center;
  background-color: #f9f9f9;
  transition: all 0.2s;
}
.invite-circle:active {
  background-color: #eee;
  transform: scale(0.95);
}

.plus-icon {
  font-size: 50rpx; 
  color: #ccc; 
  font-weight: 300;
  margin-top: -6rpx; /* 微调垂直居中 */
}

/* 名字标签 */
.name-tag {
  position: absolute; 
  bottom: -46rpx;
  left: 50%; 
  transform: translateX(-50%);
  font-size: 24rpx; 
  color: #333; 
  font-weight: 600;
  white-space: nowrap;
}

/* 换头像的小相机图标 */
.camera-badge {
  position: absolute; 
  bottom: 0; 
  right: 0;
  width: 40rpx; 
  height: 40rpx;
  background: #fff; 
  border-radius: 50%;
  display: flex; 
  align-items: center; 
  justify-content: center;
  font-size: 22rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.15);
  z-index: 5;
}

/* 中间连接状态 */
.connect-status {
  flex: 1; /* 占据中间所有空间 */
  display: flex; 
  flex-direction: column; 
  align-items: center; 
  justify-content: center;
}

.heart-beat { 
  font-size: 44rpx; 
  color: #ff6b81; 
  animation: heartBeat 1.5s infinite; 
  margin-bottom: -10rpx;
  text-shadow: 0 2rpx 10rpx rgba(255, 107, 129, 0.4);
}
.days-box { display: flex; flex-direction: column; align-items: center; }
.days-num { font-size: 48rpx; font-weight: 900; color: #333; font-family: 'Courier New', monospace; line-height: 1.1; }
.days-txt { font-size: 18rpx; color: #aaa; letter-spacing: 2rpx; text-transform: uppercase; }

.disconnect-line {
  width: 100rpx; 
  height: 2rpx;
  background-color: #e0e0e0;
  margin-bottom: 12rpx;
}
.disconnect-txt { font-size: 20rpx; color: #bbb; }


/* === 3. 底部编辑区 === */
.info-edit-area {
  display: flex; 
  flex-direction: column; 
  align-items: center;
  width: 100%;
}

.nickname-row {
  display: flex; 
  align-items: center;
  justify-content: center;
  background: #f9f9f9; 
  padding: 10rpx 30rpx;
  border-radius: 30rpx; 
  margin-bottom: 24rpx;
}
.nickname-input {
  font-size: 30rpx; 
  font-weight: bold; 
  color: #333; 
  text-align: center; 
  width: 200rpx;
}
.edit-icon { font-size: 24rpx; color: #ccc; margin-left: 10rpx; }

.date-pill {
  font-size: 22rpx; 
  color: #ff6b81;
  background: #fff0f5; 
  padding: 10rpx 30rpx; 
  border-radius: 30rpx;
  font-weight: 600;
}
.single-hint {
  font-size: 22rpx; 
  color: #ffb7b2; 
  margin-top: 10rpx;
}

/* === 4. 奖励条 & 菜单 (复用之前的优秀样式) === */
.reward-entry {
  margin: 30rpx 30rpx 0 30rpx;
  background: linear-gradient(135deg, #fff8e1, #fff3e0);
  border-radius: 24rpx;
  padding: 24rpx 30rpx;
  display: flex; justify-content: space-between; align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(255, 160, 0, 0.1);
  border: 1rpx solid #ffe0b2;
}
.entry-left { display: flex; align-items: center; }
.gift-icon-box { font-size: 40rpx; margin-right: 20rpx; }
.entry-text { display: flex; flex-direction: column; }
.entry-title { font-size: 28rpx; font-weight: bold; color: #e65100; }
.entry-desc { font-size: 20rpx; color: #f57c00; margin-top: 4rpx; }
.entry-btn {
  background: linear-gradient(90deg, #ff9800, #f57c00);
  color: #fff; font-size: 24rpx; padding: 10rpx 24rpx;
  border-radius: 30rpx; font-weight: bold;
  box-shadow: 0 4rpx 10rpx rgba(255, 152, 0, 0.3);
}

.menu-group { margin: 30rpx; padding-bottom: 20rpx; }

.menu-item {
  background: #fff;
  padding: 30rpx;
  border-radius: 24rpx;
  display: flex; justify-content: space-between; align-items: center;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.02);
}
/* 修复菜单按钮 */
button.menu-item {
  width: 100%; border: none; text-align: left; line-height: normal; padding: 30rpx;
}
button.menu-item::after { border: none; }

.menu-item.highlight { background: #f9fbe7; border: 1rpx solid #f0f4c3; }

.mi-left { display: flex; align-items: center; }
.mi-icon {
  width: 72rpx; height: 72rpx; border-radius: 20rpx;
  display: flex; align-items: center; justify-content: center;
  font-size: 32rpx; margin-right: 24rpx;
}
.mi-icon.yellow { background: #fffde7; color: #fbc02d; }
.mi-icon.pink { background: #ffebee; color: #ff5252; }
.mi-icon.blue { background: #e3f2fd; color: #2196f3; }
.mi-icon.green { background: #e8f5e9; color: #4caf50; }

.mi-content { display: flex; flex-direction: column; }
.mi-title { font-size: 28rpx; font-weight: bold; color: #333; margin-bottom: 4rpx; }
.mi-desc { font-size: 20rpx; color: #999; }

.mi-arrow { font-size: 24rpx; color: #ccc; }
.mi-tag {
  background: #8bc34a; color: #fff; font-size: 22rpx; padding: 6rpx 16rpx; border-radius: 20rpx;
}
.dot-red { width: 14rpx; height: 14rpx; background: #ff5252; border-radius: 50%; }

.footer-copyright {
  text-align: center; color: #ddd; font-size: 20rpx; margin-bottom: 40rpx;
}

@keyframes heartBeat { 
  0% { transform: scale(1); } 50% { transform: scale(1.2); } 100% { transform: scale(1); } 
}
@keyframes bounceIn {
  0% { opacity: 0; transform: scale(0.9); } 
  100% { opacity: 1; transform: scale(1); }
}
@keyframes slideUp {
  from { transform: translateY(20rpx); opacity: 0; }
  to { transform: translateY(0); opacity: 1; }
}
.bounce-in { animation: bounceIn 0.6s cubic-bezier(0.215, 0.61, 0.355, 1); }
.slide-up { animation: slideUp 0.6s ease-out; }
.slide-up-delay { animation: slideUp 0.6s ease-out 0.1s backwards; }