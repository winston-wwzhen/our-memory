.connected-state {
  text-align: center; border: 2rpx solid #fff0f6; background: #fffdfd;
  display: flex; flex-direction: column; align-items: center; justify-content: center;
}
.cp-avatars-box { display: flex; align-items: center; justify-content: center; margin-bottom: 20rpx; }
.cp-avatar { width: 90rpx; height: 90rpx; border-radius: 50%; border: 4rpx solid #fff; box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.1); }
.heart-beat { font-size: 30rpx; color: #ff6b81; margin: 0 20rpx; animation: heartBeat 1.5s infinite; }
.love-content { display: flex; flex-direction: column; align-items: center; }
.love-title { font-size: 26rpx; color: #5d4037; font-weight: bold; margin-bottom: 6rpx; }
.love-partner { font-size: 32rpx; color: #ff6b81; font-weight: 800; margin-bottom: 10rpx; }
.love-desc-sub { font-size: 22rpx; color: #a1887f; }
.footer-actions { margin-top: 30rpx; }
.unbind-link { font-size: 22rpx; color: #ccc; text-decoration: underline; padding: 10rpx; }

