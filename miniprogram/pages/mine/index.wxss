/* miniprogram/pages/mine/index.wxss */
page {
  background: #f7f8fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
  --primary: #ff6b81; 
  --text-main: #333;
  --text-sub: #999;
}

.page-container {
  min-height: 100vh;
  padding-bottom: 60rpx;
  position: relative;
}

/* === 1. 顶部沉浸背景 === */
.bg-layer {
  position: absolute;
  top: 0; left: 0; width: 100%; 
  height: 520rpx;
  background: linear-gradient(180deg, #ffdde1 0%, #ffffff 100%);
  z-index: 0;
}
.circle-deco { position: absolute; border-radius: 50%; filter: blur(40px); opacity: 0.6; }
.c1 { width: 300rpx; height: 300rpx; background: #ff9a9e; top: -100rpx; left: -50rpx; }
.c2 { width: 200rpx; height: 200rpx; background: #a18cd1; top: 100rpx; right: -60rpx; opacity: 0.4; }

/* === 2. 核心身份卡片 === */
.profile-card {
  position: relative;
  z-index: 10;
  margin: 30rpx 30rpx 0 30rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  border-radius: 36rpx;
  /* 优化：调整内边距，底部留白减少 */
  padding: 40rpx 30rpx 30rpx 30rpx;
  /* 优化：阴影更柔和 */
  box-shadow: 0 20rpx 50rpx rgba(255, 182, 193, 0.25);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
}

.card-top-bar {
  display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 30rpx;
}

/* VIP 列样式 */
.vip-column {
  display: flex; flex-direction: column; align-items: flex-start;
}
.vip-badge {
  display: flex; align-items: center; background: #f0f2f5; padding: 8rpx 20rpx; border-radius: 30rpx;
  font-size: 22rpx; color: #666; font-weight: bold; margin-bottom: 6rpx;
}
.vip-badge.is-vip {
  background: linear-gradient(90deg, #333, #555); color: #ffd700;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.2);
}
.vip-badge .icon { margin-right: 8rpx; }
.vip-date-txt { font-size: 18rpx; color: #999; margin-left: 8rpx; }

.id-tag {
  font-size: 20rpx; color: #ccc; background: rgba(0,0,0,0.03);
  padding: 6rpx 16rpx; border-radius: 10rpx; display: flex; align-items: center; margin-top: 6rpx;
}
.copy-icon { margin-left: 6rpx; font-size: 18rpx; }

/* === 核心互动区 === */
.avatars-area {
  display: flex; justify-content: space-between; align-items: center;
  padding: 0 20rpx; margin-bottom: 30rpx; position: relative;
}

button.reset-btn {
  background-color: transparent !important; padding: 0 !important; margin: 0 !important;
  line-height: normal !important; border-radius: 0 !important; width: auto !important; font-weight: normal !important;
}
button.reset-btn::after { border: none !important; width: 0; height: 0; }

.avatar-left-wrap, .avatar-right-wrap {
  width: 140rpx; position: relative; display: flex; flex-direction: column;
  align-items: center; justify-content: flex-start; height: 180rpx;
}
.avatar-img {
  width: 130rpx; height: 130rpx; border-radius: 50%; border: 6rpx solid #fff;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.1); background-color: #f0f0f0;
}

.invite-circle {
  width: 130rpx; height: 130rpx; border-radius: 50%; border: 4rpx dashed #dcdcdc;
  display: flex; align-items: center; justify-content: center; background-color: #f9f9f9;
  transition: all 0.2s; box-sizing: border-box;
}
.invite-circle:active { background-color: #eee; transform: scale(0.95); }
.plus-icon { font-size: 50rpx; color: #ccc; font-weight: 300; margin-top: -6rpx; }

.name-tag-edit {
  position: absolute; bottom: 0; left: 50%; transform: translateX(-50%);
  display: flex; align-items: center; width: 180rpx; justify-content: center;
}
.nickname-input-clean {
  font-size: 26rpx; color: #333; font-weight: 600; text-align: center;
  min-height: auto; height: 40rpx; line-height: 40rpx;
}
.edit-icon-small { font-size: 20rpx; color: #ccc; margin-left: 4rpx; }

.name-tag {
  position: absolute; bottom: 0; left: 50%; transform: translateX(-50%);
  font-size: 26rpx; color: #333; font-weight: 600; white-space: nowrap; line-height: 40rpx;
}
.camera-badge {
  position: absolute; bottom: 6rpx; right: 6rpx; width: 36rpx; height: 36rpx;
  background: #fff; border-radius: 50%; display: flex; align-items: center; justify-content: center;
  font-size: 20rpx; box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.15); z-index: 5;
}

.connect-status {
  flex: 1; display: flex; flex-direction: column; align-items: center; justify-content: center;
  margin-top: -30rpx;
}
.heart-beat { 
  font-size: 44rpx; color: #ff6b81; animation: heartBeat 1.5s infinite; 
  margin-bottom: -10rpx; text-shadow: 0 2rpx 10rpx rgba(255, 107, 129, 0.4);
}
.days-box { display: flex; flex-direction: column; align-items: center; }
.days-num { font-size: 48rpx; font-weight: 900; color: #333; font-family: 'Courier New', monospace; line-height: 1.1; }
.days-txt { font-size: 18rpx; color: #aaa; letter-spacing: 2rpx; text-transform: uppercase; }
.disconnect-line { width: 100rpx; height: 2rpx; background-color: #e0e0e0; margin-bottom: 12rpx; }
.disconnect-txt { font-size: 20rpx; color: #bbb; }

/* === [NEW] 数据仪表盘样式 (替代原有的 love-stat-box 和 film-stat-box) === */
.data-dashboard {
  margin: 40rpx 20rpx 10rpx; /* 左右边距稍微增加，让卡片不要太满 */
  background: linear-gradient(180deg, #fffcfd 0%, #fff9fa 100%); /* 增加微弱渐变，更有质感 */
  border-radius: 24rpx;
  padding: 32rpx 0; /* 上下内边距统一 */
  display: flex;
  align-items: flex-start; /* 顶部对齐，方便显示下方的 tags */
  justify-content: space-evenly;
  border: 1rpx solid rgba(255, 235, 238, 0.8);
  box-shadow: 0 4rpx 12rpx rgba(255, 228, 225, 0.3); /* 增加轻微的立体阴影 */
}

.data-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  position: relative;
  transition: opacity 0.2s; /* 增加过渡效果 */
}

.data-main {
  position: relative;
  line-height: 1;
  margin-bottom: 12rpx;
  display: flex;
  align-items: baseline;
}

.data-num {
  font-size: 36rpx; /* 稍微调小一点点，显得更精致 */
  font-weight: 900;
  color: #333;
  font-family: 'DINAlternate-Bold', -apple-system, sans-serif;
  margin-right: 4rpx;
  letter-spacing: -1rpx;
}

.data-dashboard > view:nth-child(3) .data-num {
  color: #e91e63; /* 玫瑰红，与图标呼应 */
}

.data-unit {
  font-size: 22rpx;
  color: #999;
  font-weight: normal;
  transform: translateY(-2rpx); /* 微调对齐 */
}

.data-label {
  font-size: 24rpx;
  color: #888;
  display: flex;
  align-items: center;
  opacity: 0.9;
  background: rgba(0,0,0,0.02); /* 给标签加一个极淡的背景条，增加层次 */
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.data-label .icon {
  font-size: 24rpx;
  margin-right: 6rpx;
}

/* 胶卷详情标签优化 */
.data-tags {
  margin-top: 12rpx;
  display: flex;
  gap: 6rpx;
  flex-wrap: wrap; /* 防止宽度不够时撑开 */
  justify-content: center;
}

.data-tags .tag {
  font-size: 16rpx;
  color: #b0a0a0;
  background: #fff;
  padding: 2rpx 8rpx;
  border-radius: 6rpx;
  border: 1rpx solid #eee;
  white-space: nowrap;
}

.data-divider {
  width: 2rpx;
  height: 50rpx; /* 高度稍微调小 */
  background: linear-gradient(180deg, transparent, #eee, #e0e0e0, #eee, transparent); /* 两头渐隐，更柔和 */
  align-self: center; /* 关键：垂直居中，不再依赖 margin-top */
  margin-top: -10rpx; /* 微调：因为 data-item 有 tags 可能会把整体高度撑大，上移一点视觉更平衡 */
}

/* === 底部信息编辑区 === */
.info-edit-area { display: flex; flex-direction: column; align-items: center; width: 100%; margin-top: 20rpx; }
.date-pill {
  font-size: 22rpx; color: #ff6b81; background: #fff0f5; padding: 10rpx 30rpx; 
  border-radius: 30rpx; font-weight: 600;
}
.single-hint { font-size: 22rpx; color: #ffb7b2; margin-top: 10rpx; }

/* === 4. 奖励条 & 菜单 === */
.reward-entry {
  margin: 30rpx 30rpx 0 30rpx;
  background: linear-gradient(135deg, #fff8e1, #fff3e0);
  border-radius: 24rpx; padding: 24rpx 30rpx; display: flex; justify-content: space-between; align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(255, 160, 0, 0.1); border: 1rpx solid #ffe0b2;
}
.entry-left { display: flex; align-items: center; }
.gift-icon-box { font-size: 40rpx; margin-right: 20rpx; }
.entry-text { display: flex; flex-direction: column; }
.entry-title { font-size: 28rpx; font-weight: bold; color: #e65100; }
.entry-desc { font-size: 20rpx; color: #f57c00; margin-top: 4rpx; }
.entry-btn {
  background: linear-gradient(90deg, #ff9800, #f57c00); color: #fff; font-size: 24rpx;
  padding: 10rpx 24rpx; border-radius: 30rpx; font-weight: bold; box-shadow: 0 4rpx 10rpx rgba(255, 152, 0, 0.3);
}

.menu-group { margin: 30rpx; padding-bottom: 20rpx; }
.menu-item {
  background: #fff; padding: 30rpx; border-radius: 24rpx; display: flex; justify-content: space-between; align-items: center;
  margin-bottom: 20rpx; box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.02);
}
button.menu-item { width: 100%; border: none; text-align: left; line-height: normal; padding: 30rpx; }
button.menu-item::after { border: none; }
.menu-item.highlight { background: #f9fbe7; border: 1rpx solid #f0f4c3; }

.mi-left { display: flex; align-items: center; }

/* 优化：菜单图标改为圆形 */
.mi-icon {
  width: 80rpx; height: 80rpx; border-radius: 50%; 
  display: flex; align-items: center; justify-content: center;
  font-size: 36rpx; margin-right: 24rpx;
  transition: transform 0.2s;
}
.menu-item:active .mi-icon { transform: scale(0.95); }

.mi-icon.yellow { background: #fffde7; color: #fbc02d; }
.mi-icon.pink { background: #ffebee; color: #ff5252; }
.mi-icon.blue { background: #e3f2fd; color: #2196f3; }
.mi-icon.green { background: #e8f5e9; color: #4caf50; }

.mi-content { display: flex; flex-direction: column; }
.mi-title { font-size: 28rpx; font-weight: bold; color: #333; margin-bottom: 4rpx; }
.mi-desc { font-size: 20rpx; color: #999; }
.mi-arrow { font-size: 24rpx; color: #ccc; }
.mi-tag { background: #8bc34a; color: #fff; font-size: 22rpx; padding: 6rpx 16rpx; border-radius: 20rpx; }

.footer-copyright { text-align: center; color: #ddd; font-size: 20rpx; margin-bottom: 40rpx; }

/* === 弹窗(Modal)样式 === */
.oath-modal-mask {
  position: fixed; top: 0; left: 0; width: 100%; height: 100%;
  background: rgba(0, 0, 0, 0.6); z-index: 1000;
  display: flex; align-items: center; justify-content: center;
  backdrop-filter: blur(5px);
}

.oath-card {
  width: 560rpx; background: #fff; border-radius: 40rpx; padding: 60rpx 50rpx 40rpx 50rpx;
  display: flex; flex-direction: column; align-items: center; position: relative;
  box-shadow: 0 20rpx 60rpx rgba(0,0,0,0.1);
}

.unbind-theme { border: 2rpx solid #ffebee; }
.oath-decoration-top { font-size: 80rpx; margin-bottom: 24rpx; }
.oath-title { font-size: 40rpx; font-weight: 900; color: #333; margin-bottom: 12rpx; }
.oath-subtitle { font-size: 26rpx; color: #999; margin-bottom: 40rpx; }

.oath-warning {
  width: 100%; background: #fff8e1; border: 2rpx dashed #ffe0b2;
  border-radius: 20rpx; padding: 24rpx; margin-bottom: 50rpx;
  font-size: 24rpx; color: #f57c00; text-align: center; line-height: 1.5; box-sizing: border-box;
}

.unbind-style {
  background: #ffebee; border: 2rpx solid #ffcdd2; color: #d32f2f; display: flex; flex-direction: column;
}
.warning-title { font-weight: bold; font-size: 28rpx; margin-bottom: 6rpx; }
.warning-desc { opacity: 0.9; }

.btn-oath-confirm {
  width: 100% !important; height: 90rpx; line-height: 90rpx;
  background: linear-gradient(90deg, #ff9a9e, #ff6b81);
  color: #fff; font-size: 32rpx; font-weight: bold; border-radius: 45rpx;
  box-shadow: 0 10rpx 20rpx rgba(255, 107, 129, 0.35); margin-bottom: 20rpx;
}
.btn-oath-confirm.danger {
  background: linear-gradient(90deg, #ef5350, #c62828);
  box-shadow: 0 10rpx 20rpx rgba(211, 47, 47, 0.35);
}
.oath-cancel { font-size: 28rpx; color: #999; padding: 20rpx; }

@keyframes heartBeat { 
  0% { transform: scale(1); } 50% { transform: scale(1.2); } 100% { transform: scale(1); } 
}
@keyframes bounceIn {
  0% { opacity: 0; transform: scale(0.9); } 
  100% { opacity: 1; transform: scale(1); }
}
.bounce-in { animation: bounceIn 0.4s cubic-bezier(0.215, 0.61, 0.355, 1); }

.redeem-btn-link {
  margin-top: 10rpx; font-size: 20rpx; color: #ff6b81; background: rgba(255, 107, 129, 0.1);
  padding: 6rpx 16rpx; border-radius: 20rpx; font-weight: bold; display: inline-block; transition: all 0.2s;
}
.redeem-btn-link:active { background: rgba(255, 107, 129, 0.2); transform: scale(0.95); }