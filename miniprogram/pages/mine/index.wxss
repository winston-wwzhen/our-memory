  box-shadow: 0 4rpx 10rpx rgba(255, 107, 129, 0.3);
}

/* === ÂæÖÈ¢ÜÂèñÂ•ñÂä± === */
.reward-entry {
  margin: 30rpx 30rpx 0 30rpx;
  background: #fff; border-radius: 28rpx; padding: 24rpx 30rpx;
  display: flex; justify-content: space-between; align-items: center;
  box-shadow: 0 8rpx 20rpx rgba(255, 160, 0, 0.1);
  border: 1rpx solid #ffe0b2; position: relative; overflow: hidden;
}
.reward-entry::before {
  content: ''; position: absolute; top: 0; left: 0; width: 100%; height: 100%;
  background: linear-gradient(90deg, rgba(255,255,255,0), rgba(255,255,255,0.6), rgba(255,255,255,0));
  transform: skewX(-20deg) translateX(-150%);
  animation: shine 3s infinite;
}
@keyframes shine { 100% { transform: skewX(-20deg) translateX(150%); } }

.entry-left { display: flex; align-items: center; z-index: 1; }
.gift-icon-box { font-size: 44rpx; margin-right: 20rpx; animation: bounce 2s infinite; }
.entry-text { display: flex; flex-direction: column; }
.entry-title { font-size: 28rpx; font-weight: bold; color: #e65100; }
.entry-desc { font-size: 20rpx; color: #fb8c00; margin-top: 4rpx; }
.entry-btn {
  background: linear-gradient(90deg, #ff9800, #f57c00);
  color: #fff; font-size: 24rpx; padding: 12rpx 28rpx; border-radius: 30rpx;
  font-weight: bold; box-shadow: 0 4rpx 10rpx rgba(255, 152, 0, 0.3); z-index: 1;
}

.footer-copyright { text-align: center; color: #d1d5db; font-size: 20rpx; margin-bottom: 40rpx; }

/* === 5. üü¢ Ë°•ÂÖ®ÁöÑÂºπÁ™óÊ†∑Âºè === */
.oath-modal-mask {
  position: fixed; top: 0; left: 0; width: 100%; height: 100%;
  background: rgba(0, 0, 0, 0.75); z-index: 1000;
  display: flex; justify-content: center; align-items: center;
  backdrop-filter: blur(8px); animation: fadeIn 0.3s ease;
}

.oath-card {
  width: 560rpx; background: #fff; border-radius: 40rpx; padding: 60rpx 50rpx;
  text-align: center; position: relative; box-shadow: 0 30rpx 90rpx rgba(0,0,0,0.3);
  display: flex; flex-direction: column; align-items: center;
}

.oath-card.unbind-theme { background: #fffafa; border: 6rpx solid #ffebee; }

.oath-decoration-top { font-size: 80rpx; margin-bottom: 30rpx; animation: bounce 3s infinite ease-in-out; }
.oath-title { font-size: 40rpx; font-weight: 900; color: #333; margin-bottom: 16rpx; letter-spacing: 2rpx; }
.oath-subtitle { font-size: 28rpx; color: #888; margin-bottom: 50rpx; }

.oath-warning {
  background: #fdfbf7; padding: 24rpx; border-radius: 20rpx; width: 100%;
  box-sizing: border-box; margin-bottom: 50rpx; border: 2rpx dashed #eee;
}
.oath-warning.unbind-style { background: #ffebee; border-color: #ffcdd2; }

.warning-title { display: block; font-size: 26rpx; font-weight: bold; color: #d32f2f; margin-bottom: 8rpx; }
.warning-desc { font-size: 24rpx; color: #b71c1c; line-height: 1.5; text-align: left; }

.btn-oath-confirm {
  width: 100% !important; height: 90rpx !important; line-height: 90rpx !important;
  background: linear-gradient(90deg, #ff9a9e, #ff6b81); color: #fff;
  border-radius: 45rpx; font-size: 32rpx; font-weight: bold; padding: 0; margin: 0 0 30rpx 0;
  box-shadow: 0 10rpx 25rpx rgba(255, 107, 129, 0.3);
}
.btn-oath-confirm.danger { background: linear-gradient(90deg, #ef5350, #e53935); box-shadow: 0 10rpx 25rpx rgba(229, 57, 53, 0.3); }

.oath-cancel { font-size: 28rpx; color: #999; padding: 10rpx 30rpx; }

/* Âä®ÁîªÂÆö‰πâ */
@keyframes heartBeat { 0% { transform: scale(1); } 50% { transform: scale(1.2); } 100% { transform: scale(1); } }
@keyframes bounceIn { 0% { opacity: 0; transform: scale(0.9) translateY(20rpx); } 100% { opacity: 1; transform: scale(1) translateY(0); } }
@keyframes bounce { 0%, 100% { transform: translateY(0); } 50% { transform: translateY(-6rpx); } }
@keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }
.bounce-in { animation: bounceIn 0.7s cubic-bezier(0.2, 0.8, 0.2, 1); }
.slide-up { animation: bounceIn 0.6s ease-out 0.1s backwards; }
.slide-up-delay { animation: bounceIn 0.6s ease-out 0.2s backwards; }