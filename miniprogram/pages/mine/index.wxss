/* pages/mine/index.wxss */
page { 
  background: #fdfbf7; 
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', sans-serif;
  height: 100vh; /* 锁定高度 */
  overflow: hidden; /* 禁止滚动 */
}

.mine-container { 
  padding: 30rpx 40rpx; /* 减小上下 padding */
  height: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between; /* 上下对齐 */
}

/* 通用卡片样式：减小 padding */
.paper-texture {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(149, 157, 165, 0.08); 
  padding: 30rpx; /* 50rpx -> 30rpx */
  margin-bottom: 20rpx; /* 40rpx -> 20rpx */
  position: relative;
  overflow: visible; /* 允许头像徽章溢出 */
  flex-shrink: 0; /* 防止被过度压缩 */
}

/* === 用户卡片 === */
.user-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 20rpx; /* 底部留少一点 */
}

.avatar-wrapper {
  padding: 0;
  width: 140rpx !important; /* 160 -> 140 */
  height: 140rpx !important;
  border-radius: 50%;
  margin-bottom: 20rpx; /* 30 -> 20 */
  background: none;
  box-shadow: 0 8rpx 16rpx rgba(0,0,0,0.1);
  border: 6rpx solid #fff; 
  overflow: visible; 
  position: relative;
}
.avatar-wrapper::after { border: none; }

.avatar-img { width: 100%; height: 100%; border-radius: 50%; background-color: #f0f0f0; display: block; }

/* 徽章微调 */
.edit-badge {
  position: absolute; bottom: -4rpx; right: -4rpx;
  width: 44rpx; height: 44rpx; /* 50 -> 44 */
  background: #fff; border-radius: 50%;
  display: flex; align-items: center; justify-content: center;
  font-size: 24rpx; /* 28 -> 24 */
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.15);
  border: 4rpx solid #fdfbf7; color: #5d4037; z-index: 10;
}

.nickname-row { margin-bottom: 16rpx; display: flex; justify-content: center; width: 100%; }
.nickname-box {
  display: flex; align-items: center; justify-content: center;
  background: #fffbf0; padding: 10rpx 30rpx; /* 减小 padding */
  border-radius: 40rpx; border: 2rpx dashed #e0d6c6; transition: all 0.2s;
}
.nickname-input { font-size: 30rpx; font-weight: 600; color: #5d4037; text-align: center; min-width: 120rpx; max-width: 300rpx; }
.nickname-placeholder { color: #ccc; font-weight: normal; }
.edit-icon { font-size: 26rpx; color: #a1887f; margin-left: 10rpx; opacity: 0.6; }

.status-tag { font-size: 22rpx; padding: 6rpx 20rpx; border-radius: 30rpx; margin-top: 6rpx; margin-bottom: 16rpx; }
.status-tag.waiting { background: #f5f5f5; color: #999; }
.status-tag.connected { background: #ffe4e8; color: #ff6b81; }

.btn-save { background: #5d4037; color: #fff; border-radius: 30rpx; margin-top: 0; font-size: 24rpx; }

/* === 邀请卡片 (让它自适应) === */
.action-card {
  display: flex;
  flex-direction: column;
  justify-content: center; /* 内容居中 */
  flex: 1; /* 自动占据剩余空间 */
  margin-bottom: 10rpx; /* 底部留白减小 */
}

.card-header { text-align: center; margin-bottom: 20rpx; }
.card-title { font-size: 30rpx; font-weight: bold; color: #5d4037; display: block; }
.card-subtitle { font-size: 18rpx; color: #b0a4a4; letter-spacing: 2rpx; margin-top: 4rpx; text-transform: uppercase; }

.label { font-size: 22rpx; color: #8d6e63; margin-bottom: 10rpx; display: block; font-weight: 500; }

.code-section { margin-bottom: 20rpx; }
.code-display {
  background: #fdf6e3; padding: 16rpx 20rpx; /* 减小 padding */
  border-radius: 12rpx; border: 2rpx dashed #dcc8ba;
  display: flex; justify-content: space-between; align-items: center; margin-bottom: 16rpx;
}
.code-text { font-family: monospace; color: #5d4037; font-size: 22rpx; width: 80%; overflow: hidden; white-space: nowrap; text-overflow: ellipsis; }
.copy-tag { font-size: 18rpx; color: #ff9a9e; border: 2rpx solid #ff9a9e; padding: 2rpx 10rpx; border-radius: 20rpx; }

.btn-share-pill {
  width: 100% !important; background: #5d4037; color: #fff; border-radius: 40rpx;
  font-size: 24rpx; padding: 16rpx 0; font-weight: normal; box-shadow: 0 4rpx 8rpx rgba(93, 64, 55, 0.2);
}

.divider-line { height: 2rpx; background: #eee; margin: 20rpx 0; position: relative; }
.divider-line::after {
  content: "OR"; position: absolute; left: 50%; top: 50%; transform: translate(-50%, -50%);
  background: #fff; padding: 0 16rpx; color: #ccc; font-size: 18rpx;
}

.input-wrapper { background: #f9f9f9; padding: 16rpx 20rpx; border-radius: 12rpx; margin-bottom: 16rpx; }
.code-input { font-size: 24rpx; color: #333; }

.btn-connect-pill {
  width: 100% !important; background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
  color: #fff; border-radius: 40rpx; font-size: 26rpx; padding: 18rpx 0; font-weight: bold;
  box-shadow: 0 4rpx 8rpx rgba(255, 154, 158, 0.3);
}

/* === 已连接状态 === */
.connected-state {
  text-align: center;
  border: 2rpx solid #fff0f6;
  background: #fffdfd;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

