/* miniprogram/pages/mine/index.wxss */
page {
  background: #f0f4f8; 
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Segoe UI, Arial, Roboto, 'PingFang SC', sans-serif;
  --primary: #ff6b81;
  --text-main: #333;
  --text-sub: #999;
}

.page-container {
  min-height: 100vh;
  padding-bottom: 60rpx;
  position: relative;
  overflow: hidden; 
}

/* === 1. Âä®ÊÄÅÊ≤âÊµ∏ËÉåÊôØ === */
.bg-layer {
  position: absolute;
  top: 0; left: 0; width: 100%; height: 100%;
  background: linear-gradient(180deg, #ffeef1 0%, #f0f4f8 100%);
  z-index: 0;
}

.circle-deco {
  position: absolute;
  border-radius: 50%;
  filter: blur(50px);
  opacity: 0.6;
  animation: floatBg 10s infinite ease-in-out;
}
.c1 { width: 400rpx; height: 400rpx; background: #ffc3a0; top: -100rpx; left: -100rpx; animation-delay: 0s; }
.c2 { width: 350rpx; height: 350rpx; background: #ffafbd; top: 10%; right: -100rpx; animation-delay: 5s; }
.c3 { width: 300rpx; height: 300rpx; background: #a18cd1; bottom: 10%; left: -50rpx; opacity: 0.3; animation-delay: 2s; }

@keyframes floatBg {
  0%, 100% { transform: translate(0, 0); }
  50% { transform: translate(20rpx, 30rpx); }
}

/* === 2. Ê†∏ÂøÉË∫´‰ªΩÂç°Áâá === */
.profile-card {
  position: relative;
  z-index: 10;
  margin: 180rpx 30rpx 0 30rpx;
  background: rgba(255, 255, 255, 0.75); 
  backdrop-filter: blur(20px); 
  border-radius: 40rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.05), inset 0 0 0 2rpx rgba(255, 255, 255, 0.8);
  transform: translateY(0);
}

.card-top-bar {
  display: flex; justify-content: space-between; align-items: center; margin-bottom: 50rpx;
}

.vip-badge {
  display: flex; align-items: center; background: rgba(255,255,255,0.6);
  padding: 8rpx 24rpx; border-radius: 30rpx; font-size: 22rpx; color: #666; font-weight: bold;
  border: 1rpx solid rgba(255,255,255,0.5);
}
.vip-badge.is-vip {
  background: linear-gradient(135deg, #333, #555); color: #ffd700;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.2); border: none;
}
.vip-badge .icon { margin-right: 8rpx; }

.id-tag {
  font-size: 20rpx; color: #b0bec5; background: rgba(255,255,255,0.5);
  padding: 6rpx 16rpx; border-radius: 20rpx; display: flex; align-items: center;
}
.copy-icon { margin-left: 8rpx; font-size: 18rpx; }

/* === Â§¥ÂÉè‰∫íÂä®Âå∫ (‰øÆÂ§çÊ†∑Âºè) === */
.avatars-area {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 40rpx; /* Â¢ûÂä†ÂÜÖËæπË∑ù */
  margin-bottom: 60rpx; /* Â¢ûÂä†Â∫ïÈÉ®Ë∑ùÁ¶ªÔºåÈò≤Ê≠¢ÈáçÂè† */
  height: 140rpx;
  position: relative; 
}

/* üü¢ Â§¥ÂÉèÂÆπÂô®Â¢ûÂä† relative ÂÆö‰ΩçÔºåÈò≤Ê≠¢ÂêçÂ≠ó‰π±Ë∑ë */
.avatar-wrap {
  width: 130rpx; 
  height: 130rpx;
  position: relative; 
  display: flex; 
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

button.avatar-btn {
  background-color: transparent !important; padding: 0 !important; margin: 0 !important;
  line-height: normal !important; border-radius: 0 !important; width: auto !important;
  overflow: visible; 
}
button.avatar-btn::after { border: none !important; }

.avatar-img {
  width: 130rpx; height: 130rpx; border-radius: 50%;
  border: 6rpx solid #fff;
  box-shadow: 0 10rpx 30rpx rgba(255, 107, 129, 0.15);
  background-color: #fff;
}

/* ÂêçÂ≠óÊ†áÁ≠æÂõ∫ÂÆöÂú®ÂÆπÂô®Â∫ïÈÉ® */
.name-tag {
  position: absolute; 
  bottom: -50rpx; 
  left: 50%; 
  transform: translateX(-50%);
  font-size: 24rpx; 
  color: #555; 
  font-weight: bold; 
  white-space: nowrap;
  background: rgba(255,255,255,0.8); 
  padding: 4rpx 16rpx; 
  border-radius: 20rpx;
  z-index: 2;
}

.invite-btn-circle {
  width: 130rpx; height: 130rpx; border-radius: 50%;
  border: 4rpx dashed #dcdcdc;
  display: flex; align-items: center; justify-content: center;
  background-color: rgba(255,255,255,0.6);
  padding: 0 !important; margin: 0 !important; line-height: 130rpx;
}
.plus-icon { font-size: 60rpx; color: #ccc; font-weight: 200; margin-top: -10rpx;}

.camera-badge {
  position: absolute; bottom: 6rpx; right: 6rpx;
  width: 44rpx; height: 44rpx; background: #fff; border-radius: 50%;
  display: flex; align-items: center; justify-content: center;
  font-size: 24rpx; box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.15); z-index: 5;
  color: #555;
}

.connect-status {
  flex: 1; display: flex; flex-direction: column; align-items: center; justify-content: center;
}
.heart-beat {
  font-size: 50rpx; color: #ff6b81; animation: heartBeat 1.5s infinite;
  text-shadow: 0 4rpx 16rpx rgba(255, 107, 129, 0.4);
}
.days-box { display: flex; flex-direction: column; align-items: center; margin-top: -6rpx; }
.days-num { font-size: 40rpx; font-weight: 900; color: #333; font-family: 'Courier New', monospace; }
.days-txt { font-size: 18rpx; color: #aaa; letter-spacing: 4rpx; text-transform: uppercase; }

.disconnect-line { width: 80rpx; height: 4rpx; background-color: #e0e0e0; border-radius: 4rpx; margin-bottom: 12rpx; }
.disconnect-txt { font-size: 20rpx; color: #bbb; background: #f5f5f5; padding: 4rpx 12rpx; border-radius: 10rpx; }

/* === 3. ‰ø°ÊÅØÁºñËæëÂå∫ === */
.info-edit-area {
  display: flex; flex-direction: column; align-items: center; width: 100%;
}

.nickname-row {
  display: flex; align-items: center; justify-content: center;
  margin-bottom: 30rpx; position: relative;
  width: 60%; border-bottom: 2rpx solid #eee; padding-bottom: 10rpx;
}
.nickname-input {
  font-size: 32rpx; font-weight: bold; color: #333; text-align: center; height: 50rpx;
}
