/* === ä¸­éƒ¨ï¼šç”¨æˆ·å¤´åƒå¡ç‰‡ === */
.user-card {
  display: flex; flex-direction: column; align-items: center;
  padding-bottom: 16rpx; 
}
.avatar-wrapper {
  padding: 0;
  width: 130rpx !important; 
  height: 130rpx !important;
  border-radius: 50%;
  margin-bottom: 16rpx; 
  background: none;
  box-shadow: 0 8rpx 16rpx rgba(0,0,0,0.1);
  border: 6rpx solid #fff; 
  overflow: visible; position: relative;
}
.avatar-wrapper::after { border: none; }
.avatar-img { width: 100%; height: 100%; border-radius: 50%; background-color: #f0f0f0; display: block; }
.edit-badge {
  position: absolute; bottom: -4rpx; right: -4rpx;
  width: 40rpx; height: 40rpx; 
  background: #fff; border-radius: 50%;
  display: flex; align-items: center; justify-content: center;
  font-size: 22rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.15); border: 4rpx solid #fdfbf7; color: #5d4037; z-index: 10;
}
.nickname-row { margin-bottom: 12rpx; display: flex; justify-content: center; width: 100%; }
.nickname-box {
  display: flex; align-items: center; justify-content: center;
  background: #fffbf0; padding: 8rpx 24rpx; 
  border-radius: 40rpx; border: 2rpx dashed #e0d6c6; transition: all 0.2s;
}
.nickname-input { font-size: 28rpx; font-weight: 600; color: #5d4037; text-align: center; min-width: 120rpx; max-width: 300rpx; }
.nickname-placeholder { color: #ccc; font-weight: normal; }
.edit-icon { font-size: 24rpx; color: #a1887f; margin-left: 10rpx; opacity: 0.6; }
.status-tag { font-size: 20rpx; padding: 4rpx 16rpx; border-radius: 30rpx; margin-top: 4rpx; margin-bottom: 12rpx; }
.status-tag.waiting { background: #f5f5f5; color: #999; }
.status-tag.connected { background: #ffe4e8; color: #ff6b81; }
.btn-save { background: #5d4037; color: #fff; border-radius: 30rpx; margin-top: 0; font-size: 22rpx; }

/* === åº•éƒ¨ï¼šé‚€è¯·/æ“ä½œå¡ç‰‡ === */
.action-card {
  display: flex; flex-direction: column; justify-content: center;
  flex: 1; 
  margin-bottom: 10rpx;
  min-height: 0; 
}
.card-header { text-align: center; margin-bottom: 16rpx; }
.card-title { font-size: 28rpx; font-weight: bold; color: #5d4037; display: block; }
.card-subtitle { font-size: 16rpx; color: #b0a4a4; letter-spacing: 2rpx; margin-top: 2rpx; text-transform: uppercase; }
.label { font-size: 20rpx; color: #8d6e63; margin-bottom: 8rpx; display: block; font-weight: 500; }

.code-section { margin-bottom: 16rpx; }
.code-display {
  background: #fdf6e3; padding: 14rpx 20rpx; 
  border-radius: 12rpx; border: 2rpx dashed #dcc8ba;
  display: flex; justify-content: space-between; align-items: center; margin-bottom: 12rpx;
}
.code-text { font-family: monospace; color: #5d4037; font-size: 22rpx; width: 80%; overflow: hidden; white-space: nowrap; text-overflow: ellipsis; }
.copy-tag { font-size: 18rpx; color: #ff9a9e; border: 2rpx solid #ff9a9e; padding: 2rpx 10rpx; border-radius: 20rpx; }
.btn-share-pill {
  width: 100% !important; background: #5d4037; color: #fff; border-radius: 40rpx;
  font-size: 24rpx; padding: 14rpx 0; font-weight: normal;
  box-shadow: 0 4rpx 8rpx rgba(93, 64, 55, 0.2);
}

.divider-line { height: 2rpx; background: #eee; margin: 16rpx 0; position: relative; }
.divider-line::after {
  content: "OR"; position: absolute; left: 50%; top: 50%; transform: translate(-50%, -50%);
  background: #fff; padding: 0 16rpx; color: #ccc; font-size: 16rpx;
}

.input-wrapper { background: #f9f9f9; padding: 14rpx 20rpx; border-radius: 12rpx; margin-bottom: 12rpx; }
.code-input { font-size: 24rpx; color: #333; }
.btn-connect-pill {
  width: 100% !important; background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
  color: #fff; border-radius: 40rpx; font-size: 26rpx;
  padding: 16rpx 0; font-weight: bold;
  box-shadow: 0 4rpx 8rpx rgba(255, 154, 158, 0.3);
}

