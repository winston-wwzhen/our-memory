  font-weight: normal;
}
.menu-item::after { border: none; }
.menu-item:active { transform: scale(0.98); background: #fafafa; }

/* È´ò‰∫ÆËèúÂçï */
.menu-item.highlight {
  background: linear-gradient(90deg, #fffcf5, #fff);
  border: 2rpx solid #fff9c4;
}

.mi-left { display: flex; align-items: center; flex: 1; }
.mi-icon {
  width: 76rpx; height: 76rpx; border-radius: 24rpx;
  display: flex; align-items: center; justify-content: center;
  font-size: 34rpx; margin-right: 28rpx; flex-shrink: 0;
}
.mi-icon.yellow { background: #fffde7; color: #fbc02d; }
.mi-icon.pink { background: #ffebee; color: #ff5252; }
.mi-icon.blue { background: #e3f2fd; color: #2196f3; }
