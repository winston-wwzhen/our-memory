/* miniprogram/pages/decision/index.wxss */
page {
  background: #fdfbf7; 
  color: #5d4037;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', sans-serif;
  height: 100vh;
  overflow: hidden;
}

.decision-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  position: relative;
  z-index: 1;
}

/* === ğŸŒ¸ æ°›å›´èƒŒæ™¯ === */
.bg-decoration {
  position: absolute; top: 0; left: 0; width: 100%; height: 100%;
  z-index: -1;
overflow: hidden; pointer-events: none;
}
.glow-blob {
  position: absolute; width: 500rpx; height: 500rpx; border-radius: 50%;
  filter: blur(80px); opacity: 0.5;
}
.b1 { background: #ffe4e1; top: -100rpx; left: -100rpx; } 
.b2 { background: #fff9c4; bottom: 20%; right: -100rpx;
} 

.sparkle {
  position: absolute; color: #ffb7b2; font-size: 24rpx;
  animation: twinkle 3s infinite ease-in-out; opacity: 0.6;
}
.s1 { top: 15%; left: 10%; animation-delay: 0s; }
.s2 { top: 40%; right: 15%; animation-delay: 1s; font-size: 32rpx;
}
.s3 { bottom: 30%; left: 20%; animation-delay: 2s; }

@keyframes twinkle { 
  0%, 100% { opacity: 0.3; transform: scale(0.8);
} 
  50% { opacity: 1; transform: scale(1.2); } 
}

/* === ğŸ«§ æ°”æ³¡èˆå° === */
.bubble-stage {
  height: 42%;
width: 100%;
  position: relative;
  z-index: 10; /* ç¡®ä¿æ°”æ³¡åœ¨èƒŒæ™¯ä¹‹ä¸Š */
}

.partner-cloud {
  position: absolute; top: 20rpx; left: 50%; transform: translateX(-50%);
background: rgba(255, 255, 255, 0.9);
  padding: 8rpx 20rpx; border-radius: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  display: flex; align-items: center;
font-size: 22rpx; color: #8d6e63;
  z-index: 20; border: 2rpx solid #fff;
  animation: slideDown 0.5s ease-out;
}
.p-avatar { width: 36rpx; height: 36rpx;
border-radius: 50%; margin-right: 10rpx; }

.bubble-container { width: 100%; height: 100%; position: relative; }

.bubble-item {
  position: absolute; width: 130rpx;
height: 130rpx; border-radius: 50%;
  display: flex; align-items: center; justify-content: center;
  transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
animation: floatBubble 4s infinite ease-in-out; z-index: 10;
}
.bubble-glass {
  width: 100%; height: 100%; border-radius: 50%;
background: radial-gradient(circle at 30% 30%, rgba(255,255,255,0.9), rgba(255,240,245,0.4));
  box-shadow: 0 10rpx 20rpx rgba(255,182,193,0.3), inset 0 0 20rpx #fff, inset -10rpx -10rpx 20rpx rgba(255,192,203,0.1);
border: 2rpx solid rgba(255,255,255,0.6);
  display: flex; align-items: center; justify-content: center;
  position: relative; overflow: hidden;
}
.bubble-text {
  font-size: 24rpx;
color: #a1887f; font-weight: bold;
  text-align: center; line-height: 1.2; padding: 0 10rpx; z-index: 2;
}
.bubble-highlight {
  position: absolute; top: 15%;
left: 15%; width: 20%; height: 12%;
  background: #fff; border-radius: 50%; opacity: 0.8; filter: blur(2rpx);
}

.bubble-item.active { z-index: 20;
transform: scale(1.3) !important; }
.bubble-item.active .bubble-glass {
  background: radial-gradient(circle at 30% 30%, #fff, #ffc1e3);
box-shadow: 0 16rpx 30rpx rgba(255,105,180,0.4), inset 0 0 10rpx #fff;
  border: 4rpx solid #fff;
}
.bubble-item.active .bubble-text { color: #d81b60;
}

.bubble-item:nth-child(1) { top: 15%; left: 10%; animation-delay: 0s; }
.bubble-item:nth-child(2) { top: 10%; right: 12%; animation-delay: 1s; }
.bubble-item:nth-child(3) { top: 40%;
left: 38%; animation-delay: 2s; width: 150rpx; height: 150rpx; }
.bubble-item:nth-child(4) { top: 55%; left: 8%; animation-delay: 0.5s; }
.bubble-item:nth-child(5) { top: 52%;
right: 15%; animation-delay: 1.5s; }

@keyframes floatBubble { 0%, 100% { transform: translateY(0); } 50% { transform: translateY(-12rpx);
} }
@keyframes slideDown { from { transform: translateY(-50%); opacity: 0; } to { transform: translateY(0); opacity: 1;
} }

/* === ğŸƒ å¡ç‰Œèˆå° === */
.card-stage {
  flex: 1; width: 100%; position: relative;
  display: flex; flex-direction: column;
justify-content: flex-end; align-items: center;
  perspective: 1200px; padding-bottom: 80rpx;
}

.cards-fan {
  position: relative; width: 100%; height: 500rpx;
  display: flex;
justify-content: center; align-items: flex-end;
  transition: filter 0.3s;
}
.cards-fan.blur-out { filter: blur(6px); pointer-events: none; }

.card-wrapper {
  position: absolute; width: 240rpx;
height: 360rpx;
  transform-origin: 50% 150%;
  transform: rotate(var(--rot)) translateY(0);
  transition: all 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
  z-index: 1; cursor: pointer;
}
.card-wrapper.shuffling {
  transform: rotate(0deg) translateY(0) scale(0.5) !important;
  z-index: 10; transition: all 0.5s;
}
.card-wrapper.flipped {
  transform: rotate(0deg) translateY(-150rpx) scale(1.3) !important;
  z-index: 100 !important;
}

.card-body {
  width: 100%; height: 100%; position: relative;
transform-style: preserve-3d;
  transition: transform 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  box-shadow: 0 16rpx 40rpx rgba(139, 69, 19, 0.15);
  border-radius: 24rpx;
}
.card-wrapper.flipped .card-body { transform: rotateY(180deg); }

.flash-layer {
  position: absolute; top: 0; left: 0; width: 100%; height: 100%;
  background: #fff;
border-radius: 24rpx;
  opacity: 0; pointer-events: none; z-index: 200;
}
.card-wrapper.flipped .flash-layer { animation: cardFlash 0.6s ease-out;
}
@keyframes cardFlash { 0% { opacity: 0.8; transform: scale(1.1); } 100% { opacity: 0; transform: scale(1.5);
} }

.card-back, .card-face {
  position: absolute; width: 100%; height: 100%;
  backface-visibility: hidden; border-radius: 24rpx; overflow: hidden;
}

.card-back {
  background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 50%, #fad0c4 100%);
  border: 6rpx solid #fff; display: flex; align-items: center;
justify-content: center;
  box-shadow: inset 0 0 20rpx rgba(255,255,255,0.4);
}
.card-design {
  width: 84%; height: 90%; border: 2rpx dashed rgba(255,255,255,0.8);
border-radius: 16rpx; position: relative; 
  display: flex; flex-direction: column; justify-content: center; align-items: center;
}
.corner { position: absolute; color: #fff; font-size: 24rpx;
opacity: 0.8; line-height: 1; }
.tl { top: 12rpx; left: 12rpx; } .tr { top: 12rpx; right: 12rpx;
}
.bl { bottom: 12rpx; left: 12rpx; } .br { bottom: 12rpx; right: 12rpx; }
.center-symbol {
  width: 90rpx; height: 90rpx;
border-radius: 50%;
  border: 3rpx solid rgba(255,255,255,0.6);
  display: flex; align-items: center; justify-content: center; margin-bottom: 16rpx;
  background: rgba(255,255,255,0.15);
box-shadow: 0 0 16rpx rgba(255,255,255,0.3);
}
.symbol-icon { color: #fff; font-size: 44rpx; text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}
.card-hint { 
  color: #fff; font-size: 22rpx; letter-spacing: 6rpx; font-weight: 800;
  opacity: 0.95; text-transform: uppercase;
text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1); 
}

.card-face {
  background: linear-gradient(180deg, #fffbf0 0%, #fff 50%, #fff0f5 100%);
  transform: rotateY(180deg); display: flex;
align-items: center; justify-content: center;
  border: 6rpx solid #fff; box-sizing: border-box;
}
.face-frame {
  width: 84%; height: 90%;
border: 2rpx solid rgba(255, 215, 0, 0.4); 
  border-radius: 12rpx; position: relative;
  display: flex; flex-direction: column; align-items: center; justify-content: center;
background-color: rgba(255,255,255,0.5);
}
.face-frame::after {
  content: ''; position: absolute; top: 6rpx; left: 6rpx; right: 6rpx; bottom: 6rpx;
border: 2rpx dashed #ffb7b2; border-radius: 8rpx; pointer-events: none;
}
.face-icon { font-size: 24rpx; color: #ffd700;
text-shadow: 0 2rpx 4rpx rgba(255, 165, 0, 0.3); position: absolute; }
.face-icon.top { top: 12rpx; } .face-icon.bottom { bottom: 12rpx;
transform: rotate(180deg); }
.face-text {
  /* ä¼˜åŒ–æ’ç‰ˆï¼šå‡å°å­—ä½“å’Œå­—é—´è·ï¼Œç¡®ä¿é•¿æ–‡å­—ä¸æº¢å‡ºæˆ–ä¸æ¢è¡Œ */
  font-size: 30rpx; /* ä» 36rpx ç¼©å°åˆ° 30rpx */
  font-weight: 900; color: #5d4037;
