@keyframes twinkle { 0%, 100% { opacity: 0.3; transform: scale(0.8); } 50% { opacity: 1; transform: scale(1.2); } }

/* === ğŸ«§ ä¸ŠåŠéƒ¨ï¼šæ°”æ³¡èˆå° (Bubble Stage) === */
.bubble-stage {
  height: 42%; 
  width: 100%;
  position: relative;
}

/* ä¼´ä¾£åŠ¨æ€ (äº‘æœµæç¤º) */
.partner-cloud {
  position: absolute; top: 20rpx; left: 50%; transform: translateX(-50%);
  background: rgba(255, 255, 255, 0.9);
  padding: 8rpx 20rpx;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  display: flex; align-items: center;
