.symbol-icon { color: #fff; font-size: 44rpx; text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1); }

.card-hint { 
  color: #fff; font-size: 22rpx; letter-spacing: 6rpx; font-weight: 800; 
  opacity: 0.95; text-transform: uppercase;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1); 
}

/* === ğŸ€„ï¸ ç‰Œé¢ï¼šç²¾è‡´å¡”ç½—é£æ ¼ (ä¿®å¤æ–‡å­—æº¢å‡º) === */
.card-face {
  background: linear-gradient(180deg, #fffbf0 0%, #fff 50%, #fff0f5 100%);
  transform: rotateY(180deg);
  display: flex; align-items: center; justify-content: center;
  border: 6rpx solid #fff;
  box-sizing: border-box;
}

.face-frame {
  width: 84%; height: 90%;
  border: 2rpx solid rgba(255, 215, 0, 0.4); 
  border-radius: 12rpx;
  position: relative;
  display: flex; flex-direction: column;
  align-items: center; justify-content: center;
  background-color: rgba(255,255,255,0.5);
}

.face-frame::after {
  content: '';
  position: absolute; top: 6rpx; left: 6rpx; right: 6rpx; bottom: 6rpx;
  border: 2rpx dashed #ffb7b2;
  border-radius: 8rpx;
  pointer-events: none;
