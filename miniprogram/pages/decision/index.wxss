}
.tl { top: 12rpx; left: 12rpx; }
.tr { top: 12rpx; right: 12rpx; }
.bl { bottom: 12rpx; left: 12rpx; }
.br { bottom: 12rpx; right: 12rpx; }

.center-symbol {
  width: 90rpx; height: 90rpx;
  border-radius: 50%;
  border: 3rpx solid rgba(255,255,255,0.6);
