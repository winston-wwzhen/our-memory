/* æ°”æ³¡å®¹å™¨ */
.bubble-container {
  width: 100%; height: 100%;
  position: relative;
}

/* å•ä¸ªæ°”æ³¡ (æ°´æ™¶çƒ) */
.bubble-item {
  position: absolute;
  width: 130rpx; height: 130rpx;
  border-radius: 50%;
  display: flex; align-items: center; justify-content: center;
  transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  animation: floatBubble 4s infinite ease-in-out;
  z-index: 10;
}

/* æ°”æ³¡å†…çš„ç»ç’ƒè´¨æ„Ÿ */
.bubble-glass {
  width: 100%; height: 100%;
  border-radius: 50%;
  background: radial-gradient(circle at 30% 30%, rgba(255,255,255,0.9), rgba(255,240,245,0.4));
  box-shadow: 
    0 10rpx 20rpx rgba(255,182,193,0.3),
    inset 0 0 20rpx #fff,
    inset -10rpx -10rpx 20rpx rgba(255,192,203,0.1);
  border: 2rpx solid rgba(255,255,255,0.6);
  display: flex; align-items: center; justify-content: center;
  position: relative;
  overflow: hidden;
}

.bubble-text {
  font-size: 24rpx; 
  color: #a1887f; 
  font-weight: bold;
  text-align: center;
  line-height: 1.2;
  padding: 0 10rpx;
  z-index: 2;
}

.bubble-highlight {
  position: absolute; top: 15%; left: 15%;
  width: 20%; height: 12%;
  background: #fff; border-radius: 50%;
  opacity: 0.8; filter: blur(2rpx);
}

/* é€‰ä¸­çŠ¶æ€ */
.bubble-item.active {
  z-index: 20;
  transform: scale(1.3) !important;
}
.bubble-item.active .bubble-glass {
  background: radial-gradient(circle at 30% 30%, #fff, #ffc1e3);
  box-shadow: 0 16rpx 30rpx rgba(255,105,180,0.4), inset 0 0 10rpx #fff;
  border: 4rpx solid #fff;
}
.bubble-item.active .bubble-text { color: #d81b60; }

/* æœªé€‰ä¸­çŠ¶æ€å˜æ·¡ */
.bubble-container:has(.active) .bubble-item:not(.active) {
  opacity: 0.6; transform: scale(0.9);
}

/* æ°”æ³¡æ•£å¸ƒä½ç½® */
.bubble-item:nth-child(1) { top: 15%; left: 10%; animation-delay: 0s; }
.bubble-item:nth-child(2) { top: 10%; right: 12%; animation-delay: 1s; }
.bubble-item:nth-child(3) { top: 40%; left: 38%; animation-delay: 2s; width: 150rpx; height: 150rpx; }
.bubble-item:nth-child(4) { top: 55%; left: 8%; animation-delay: 0.5s; }
.bubble-item:nth-child(5) { top: 52%; right: 15%; animation-delay: 1.5s; }

@keyframes floatBubble {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-12rpx); }
}

@keyframes slideDown { from { transform: translateY(-50%); opacity: 0; } to { transform: translateY(0); opacity: 1; } }

/* === ğŸƒ ä¸‹åŠéƒ¨ï¼šå¡ç‰Œèˆå° (Card Stage) === */
.card-stage {
  flex: 1; width: 100%; position: relative;
  display: flex; flex-direction: column; justify-content: center; align-items: center;
  perspective: 1200px;
}

.cards-fan {
  position: relative; width: 100%; height: 500rpx;
  display: flex; justify-content: center; align-items: flex-end;
  padding-bottom: 60rpx;
  transition: filter 0.3s;
}
.cards-fan.blur-out { filter: blur(4px); pointer-events: none; }

.card-wrapper {
  position: absolute;
  width: 240rpx; height: 400rpx; /* å¢åŠ é«˜åº¦ç»™æ–‡å­—ç©ºé—´ */
  transform-origin: 50% 150%;
  transform: rotate(var(--rot)) translateY(0);
  transition: all 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
  z-index: 1; cursor: pointer;
}

.card-wrapper.shuffling {
  transform: rotate(0deg) translateY(0) scale(0.5) !important;
  z-index: 10; transition: all 0.5s;
}
.card-wrapper.flipped {
  transform: rotate(0deg) translateY(-120rpx) scale(1.4) !important;
  z-index: 100 !important;
}

.card-body {
  width: 100%; height: 100%;
  position: relative;
  transform-style: preserve-3d;
  transition: transform 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  box-shadow: 0 16rpx 40rpx rgba(139, 69, 19, 0.15);
  border-radius: 24rpx;
}
.card-wrapper.flipped .card-body { transform: rotateY(180deg); }

/* âœ¨ ç¿»ç‰Œç¬é—´ç™½å…‰ */
.flash-layer {
  position: absolute; top: 0; left: 0; width: 100%; height: 100%;
  background: #fff; border-radius: 24rpx;
  opacity: 0; pointer-events: none; z-index: 200;
}
.card-wrapper.flipped .flash-layer {
  animation: cardFlash 0.6s ease-out;
}
@keyframes cardFlash {
  0% { opacity: 0.8; transform: scale(1.1); }
  100% { opacity: 0; transform: scale(1.5); }
}

.card-back, .card-face {
  position: absolute; width: 100%; height: 100%;
  backface-visibility: hidden;
  border-radius: 24rpx; overflow: hidden;
}

/* === ğŸŒ¸ ç‰ŒèƒŒï¼šç²‰é‡‘æš–è‰² (ç²¾ä¿®ç‰ˆ) === */
.card-back {
  background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 50%, #fad0c4 100%);
  border: 6rpx solid #fff;
  display: flex; align-items: center; justify-content: center;
  box-shadow: inset 0 0 20rpx rgba(255,255,255,0.4);
}

.card-design {
  width: 84%; height: 90%;
  border: 2rpx dashed rgba(255,255,255,0.8);
  border-radius: 16rpx;
  position: relative; 
