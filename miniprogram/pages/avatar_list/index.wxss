/* === åº•éƒ¨ Loading === */
.footer-state { padding: 40rpx 0; text-align: center; }
.loading-wrap { display: flex; justify-content: center; gap: 10rpx; }
.dot {
  width: 10rpx; height: 10rpx; background: #ffb7b2;
  border-radius: 50%; animation: bounce 1.4s infinite ease-in-out both;
}
.dot:nth-child(1) { animation-delay: -0.32s; }
.dot:nth-child(2) { animation-delay: -0.16s; }
@keyframes bounce {
  0%, 80%, 100% { transform: scale(0); }
  40% { transform: scale(1); }
}
.no-more { font-size: 22rpx; color: #d7ccc8; letter-spacing: 2rpx; }

.make-btn {
  background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
