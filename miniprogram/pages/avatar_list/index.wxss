.banner-box {
  margin: 30rpx;
  padding: 40rpx;
  border-radius: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(10px);
  border: 2rpx solid rgba(255, 255, 255, 0.8);
