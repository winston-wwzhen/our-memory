.log-modal-mask {
  position: fixed; top: 0; left: 0; width: 100%; height: 100%;
  background: rgba(0,0,0,0.5); z-index: 100;
  display: flex; justify-content: center; align-items: center;
  visibility: hidden; opacity: 0; transition: all 0.3s;
}
.log-modal-mask.show { visibility: visible; opacity: 1; }

.log-modal-container {
  width: 600rpx; background: #fff; border-radius: 24rpx;
  padding: 30rpx; max-height: 70vh;
  display: flex; flex-direction: column;
  box-shadow: 0 10rpx 40rpx rgba(0,0,0,0.2);
}

.log-modal-header {
  display: flex; justify-content: space-between; align-items: center;
  padding-bottom: 20rpx; border-bottom: 2rpx dashed #eee;
  font-size: 30rpx; font-weight: bold; color: #5d4037;
}
.close-icon { color: #ccc; font-size: 40rpx; line-height: 1; padding: 0 10rpx; }

.log-scroll-view {
  flex: 1; min-height: 300rpx; max-height: 600rpx;
  padding-top: 20rpx;
}

.modal-log-item { display: flex; align-items: flex-start; margin-bottom: 24rpx; }
.modal-log-item:last-child { margin-bottom: 0; }

.modal-log-avatar {
  width: 70rpx; height: 70rpx; border-radius: 50%; margin-right: 20rpx;
  border: 2rpx solid #f0f0f0; flex-shrink: 0;
}
.modal-log-content { flex: 1; }
.modal-log-top { display: flex; justify-content: space-between; margin-bottom: 4rpx; }
.modal-log-name { font-size: 24rpx; font-weight: bold; }
.modal-log-name.mine { color: #ff6b81; }
.modal-log-name.partner { color: #03a9f4; }
.modal-log-time { font-size: 20rpx; color: #ccc; }
.modal-log-desc { font-size: 24rpx; color: #666; line-height: 1.4; }

.empty-log { text-align: center; color: #ccc; font-size: 24rpx; margin-top: 100rpx; }

/* === Egg Modal Styles === */
.egg-modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.god-rays {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: radial-gradient(circle, rgba(255,223,186,0.3) 0%, transparent 70%);
  animation: rotate 20s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.confetti-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

.confetti {
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  background: #ff6b81;
  animation: fall 3s linear infinite;
}

.confetti.c1 { left: 10%; animation-delay: 0s; background: #ff6b81; }
.confetti.c2 { left: 20%; animation-delay: 0.3s; background: #4CAF50; }
.confetti.c3 { left: 30%; animation-delay: 0.6s; background: #2196F3; }
.confetti.c4 { left: 40%; animation-delay: 0.9s; background: #FFC107; }
.confetti.c5 { left: 50%; animation-delay: 1.2s; background: #9C27B0; }
.confetti.c6 { left: 60%; animation-delay: 1.5s; background: #FF5722; }
.confetti.c7 { left: 70%; animation-delay: 1.8s; background: #795548; }
.confetti.c8 { left: 80%; animation-delay: 2.1s; background: #607D8B; }
.confetti.c9 { left: 85%; animation-delay: 2.4s; background: #E91E63; }
.confetti.c10 { left: 90%; animation-delay: 2.7s; background: #00BCD4; }

@keyframes fall {
  to {
    transform: translateY(100vh) rotate(360deg);
  }
}

.egg-card {
  width: 600rpx;
  background: white;
  border-radius: 30rpx;
  padding: 40rpx;
  position: relative;
  z-index: 10;
  box-shadow: 0 20rpx 60rpx rgba(0,0,0,0.3);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.card-ribbon {
  position: absolute;
  top: -15rpx;
  left: 50%;
  transform: translateX(-50%);
  background: linear-gradient(45deg, #ff6b81, #ff8f00);
  color: white;
  padding: 8rpx 30rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(255,107,129,0.4);
}

.icon-stage {
  margin: 40rpx 0;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.halo-ring {
  position: absolute;
  width: 160rpx;
  height: 160rpx;
  border: 4rpx solid rgba(255,193,7,0.3);
  border-radius: 50%;
  animation: pulse 2s infinite;
}

.egg-icon {
  font-size: 100rpx;
  z-index: 2;
  text-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.shine-star {
  position: absolute;
  font-size: 30rpx;
  animation: twinkle 1.5s infinite;
}

.shine-star.s-left {
  left: -20rpx;
  top: 20rpx;
}

.shine-star.s-right {
  right: -20rpx;
  top: 20rpx;
}

@keyframes twinkle {
  0%, 100% { opacity: 0; transform: scale(0.5); }
  50% { opacity: 1; transform: scale(1); }
}

.egg-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.egg-desc {
  font-size: 26rpx;
  color: #666;
  text-align: center;
  margin-bottom: 30rpx;
}

.egg-reward-box {
  width: 100%;
  background: #f8f8f8;
  padding: 20rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}

.reward-label {
  font-size: 22rpx;
  color: #999;
  display: block;
  margin-bottom: 10rpx;
}

.reward-val-row {
  display: flex;
  align-items: baseline;
  justify-content: center;
}

.val-num {
  font-size: 48rpx;
  font-weight: bold;
  color: #ff6b81;
  margin-right: 10rpx;
}

.val-unit {
  font-size: 24rpx;
  color: #666;
}

.btn-get-egg {
  background: linear-gradient(45deg, #ff6b81, #ff8f00);
  color: white;
  border-radius: 40rpx;
  font-size: 28rpx;
  width: 80% !important;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0;
  margin: 0;
  font-weight: bold;
  box-shadow: 0 8rpx 20rpx rgba(255,107,129,0.3);
}

@keyframes bounce-in {
  0% {
    transform: scale(0);
    opacity: 0;
  }
  50% {
    transform: scale(1.1);
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

.bounce-in {
  animation: bounce-in 0.6s ease-out;
}