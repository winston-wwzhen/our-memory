/* ÊàøÈó¥ËÉåÊôØ - È°∂Á∫ßÂ¢ûÂº∫Áâà */
.room-bg {
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 25%, #ff9a9e 50%, #fecfef 75%, #fecfef 100%);
  position: relative;
  overflow: hidden;
  animation: roomBgShift 15s ease-in-out infinite alternate;
}

.room-bg::before {
  content: '';
  position: absolute;
  top: -100%;
  left: -100%;
  width: 300%;
  height: 300%;
  background:
    radial-gradient(circle at 15% 25%, rgba(255, 246, 213, 0.6) 0%, transparent 40%),
    radial-gradient(circle at 85% 75%, rgba(230, 219, 255, 0.6) 0%, transparent 40%),
    radial-gradient(circle at 45% 55%, rgba(255, 218, 224, 0.5) 0%, transparent 35%),
    radial-gradient(circle at 65% 35%, rgba(255, 234, 167, 0.4) 0%, transparent 30%),
    conic-gradient(from 45deg at 30% 70%, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.05), rgba(255, 255, 255, 0.1));
  animation: roomFloat 25s ease-in-out infinite;
  z-index: -2;
  filter: blur(40rpx);
}

/* ËÉåÊôØË£ÖÈ•∞ÂÖÉÁ¥† - Â¢ûÂº∫Áâà */
.room-bg::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image:
    radial-gradient(circle at 15% 20%, rgba(255, 255, 255, 0.6) 3rpx, transparent 3rpx),
    radial-gradient(circle at 85% 30%, rgba(255, 255, 255, 0.5) 2rpx, transparent 2rpx),
    radial-gradient(circle at 25% 80%, rgba(255, 255, 255, 0.4) 4rpx, transparent 4rpx),
    radial-gradient(circle at 75% 70%, rgba(255, 255, 255, 0.5) 2rpx, transparent 2rpx),
    radial-gradient(circle at 50% 50%, rgba(255, 255, 255, 0.3) 6rpx, transparent 6rpx);
  background-size: 80rpx 80rpx, 60rpx 60rpx, 100rpx 100rpx, 70rpx 70rpx, 120rpx 120rpx;
  animation: sparkleFloatComplex 40s ease-in-out infinite;
  z-index: -1;
}

@keyframes roomBgShift {
  0% {
    background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 25%, #ff9a9e 50%, #fecfef 75%, #fecfef 100%);
  }
  50% {
    background: linear-gradient(135deg, #a1c4fd 0%, #c2e9fb 25%, #a8edea 50%, #fed6e3 75%, #ffeaa7 100%);
  }
  100% {
    background: linear-gradient(135deg, #d1c4e9 0%, #e1bee7 25%, #ffcdd2 50%, #f8bbd0 75%, #e1bee7 100%);
  }
}

@keyframes roomFloat {
  0%, 100% {
    transform: rotate(0deg) scale(1) translateX(0);
    opacity: 0.8;
  }
  25% {
    transform: rotate(90deg) scale(1.1) translateX(-20rpx);
    opacity: 0.9;
  }
  50% {
    transform: rotate(180deg) scale(1.05) translateX(0);
    opacity: 0.7;
  }
  75% {
    transform: rotate(270deg) scale(1.15) translateX(20rpx);
    opacity: 0.85;
  }
}

@keyframes sparkleFloatComplex {
  0%, 100% {
    transform: translateY(0) scale(1);
    opacity: 0.7;
  }
  25% {
    transform: translateY(-15rpx) scale(1.05);
    opacity: 0.9;
  }
  50% {
    transform: translateY(-25rpx) scale(0.95);
    opacity: 0.6;
  }
  75% {
    transform: translateY(-10rpx) scale(1.02);
    opacity: 0.8;
  }
}

@keyframes bgFloat {
  0%, 100% { transform: rotate(0deg) scale(1); }
  50% { transform: rotate(180deg) scale(1.1); }
}

@keyframes sparkleFloat {
  0% { transform: translateY(0px); }
  100% { transform: translateY(-20px); }
}

