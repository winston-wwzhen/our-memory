/* miniprogram/pages/playground/index.wxss */
page {
  background: #fdfbf7;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', sans-serif;
  padding-bottom: 40rpx;
}

.playground-container {
  padding: 40rpx;
}

/* Â§çÁî®Á∫∏Ë¥®Á∫πÁêÜ */
.paper-texture {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(149, 157, 165, 0.08);
  position: relative;
}

/* === Pet Paradise Room Container === */
.room-container {
  width: 100%;
  height: 60vh;
  background-size: cover;
  background-position: center;
  position: relative;
  overflow: hidden;
  border-radius: 20rpx 20rpx 0 0;
  margin-top: -30rpx;
  margin-bottom: 40rpx;
}

/* Pet Character Positioning */
.pet-container {
  position: absolute;
  bottom: 15%;
  left: 50%;
  transform: translateX(-50%);
}

.pet-character {
  width: 300rpx;
  height: 300rpx;
  transition: all 0.3s ease;
}

/* Pet Animations */
@keyframes pet-pat {
  0% { transform: scale(1); }
  30% { transform: scale(0.9); }
  60% { transform: scale(1.1); }
  100% { transform: scale(1); }
}

.pet-animation {
  animation: pet-pat 1s ease-out;
}

@keyframes eating {
  0%, 100% { transform: scale(1) translateY(0); }
  50% { transform: scale(0.95) translateY(-10rpx); }
}

.eating-animation {
  animation: eating 0.8s ease-in-out infinite;
}

/* UI Overlay Positioning */
.ui-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
}

.ui-overlay > view {
  pointer-events: auto;
}

/* Pet Info Panel */
.pet-info-panel {
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  background: rgba(255, 255, 255, 0.9);
  padding: 20rpx 30rpx;
  border-radius: 30rpx;
  backdrop-filter: blur(10rpx);
}

.pet-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.mood-container {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.mood-label {
  font-size: 24rpx;
  color: #666;
}

.mood-bar {
  width: 200rpx;
  height: 20rpx;
}

.mood-value {
  font-size: 22rpx;
  color: #666;
  font-weight: bold;
}

/* Resource Panel */
.resource-panel {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
}

.resource-item {
  background: rgba(255, 255, 255, 0.9);
  padding: 15rpx 25rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
  backdrop-filter: blur(10rpx);
}

.resource-icon {
  font-size: 28rpx;
}

.resource-value {
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
}

/* Action Buttons */
.action-buttons {
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
  display: flex;
  gap: 20rpx;
}

.action-btn {
  background: #4CAF50;
  color: white;
  padding: 20rpx;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
  transition: all 0.3s;
}

.action-btn.disabled {
  background: #ccc;
  box-shadow: none;
}

.btn-icon {
  font-size: 32rpx;
}

.btn-text {
  font-size: 18rpx;
  margin-top: 4rpx;
}

/* Mail Button */
.mail-button {
  position: absolute;
  bottom: 30rpx;
  left: 30rpx;
  font-size: 60rpx;
  filter: drop-shadow(0 2rpx 8rpx rgba(0,0,0,0.2));
}

.with-notification {
  animation: pulse 2s infinite;
}

/* Travel Note */
.travel-note-container {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
}

.travel-note {
  width: 400rpx;
  height: 300rpx;
}

.note-text {
  display: block;
  font-size: 32rpx;
  color: #333;
  margin-top: 20rpx;
  font-weight: bold;
}

.return-time {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-top: 10rpx;
}

/* Status Message */
.status-message {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  z-index: 100;
}

/* Heart Particles */
.heart-particle {
  position: absolute;
  font-size: 40rpx;
  animation: float-up 2s ease-out forwards;
  pointer-events: none;
}

@keyframes float-up {
  0% {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
  100% {
    opacity: 0;
    transform: translateY(-200rpx) scale(0.5);
  }
}

