/* miniprogram/pages/playground/index.wxss */
page {
  background: #fdfbf7;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', sans-serif;
  padding-bottom: 40rpx;
}

.playground-container {
  padding: 40rpx;
}

/* Â§çÁî®Á∫∏Ë¥®Á∫πÁêÜ */
.paper-texture {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(149, 157, 165, 0.08);
  position: relative;
}

/* === Ëä±Âõ≠Âç°Áâá === */
.garden-card {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
  border: 2rpx dashed #aed9e9;
  background: linear-gradient(180deg, #f0f8ff 0%, #fff 100%);
  position: relative; /* Á°Æ‰øùÊ∞îÊ≥°ÂèØ‰ª•ÁªùÂØπÂÆö‰Ωç */
}

.card-header {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-title { font-size: 30rpx; font-weight: 800; color: #5d4037; }

/* ÂæΩÁ´† */
.water-badge {
  background: #e1f5fe; color: #0288d1;
  font-size: 22rpx; padding: 6rpx 16rpx;
  border-radius: 20rpx; font-weight: bold;
  flex-shrink: 0;
}
.harvest-badge {
  background: #fff8e1; color: #ff8f00;
  font-size: 22rpx; padding: 6rpx 16rpx;
  border-radius: 20rpx; font-weight: bold;
  border: 1rpx solid #ffe082;
  flex-shrink: 0;
}
.water-info-sub {
  width: 100%; text-align: right;
  font-size: 20rpx; color: #0288d1;
  margin-top: -10rpx; margin-bottom: 20rpx;
}

/* ËÆ∞ÂΩïÊ∞îÊ≥° */
.log-bubble {
  position: absolute;
  top: 120rpx; 
  left: 40rpx; 
  right: auto;
  background: rgba(255, 255, 255, 0.9);
  padding: 8rpx 16rpx;
  border-radius: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  display: flex; align-items: center;
  border: 2rpx solid #fff;
  z-index: 10;
  animation: floatBubble 3s infinite ease-in-out;
}
.bubble-icon { font-size: 24rpx; margin-right: 6rpx; }
.bubble-txt { font-size: 20rpx; color: #8d6e63; font-weight: bold; }

@keyframes floatBubble {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-6rpx); }
}

.plant-stage {
  height: 240rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}

.flower-img { width: 220rpx; height: 220rpx; }

/* Âä®Áîª */
.bounce-anim { animation: bounce 3s infinite ease-in-out; }
.glow-anim {
  filter: drop-shadow(0 0 16rpx rgba(255, 105, 180, 0.6));
  animation: float 3s infinite ease-in-out;
}
@keyframes bounce { 0%, 100% { transform: translateY(0); } 50% { transform: translateY(-12rpx); } }
@keyframes float { 0%, 100% { transform: translateY(0); } 50% { transform: translateY(-16rpx); } }

/* ËøõÂ∫¶Êù° */
.progress-box { width: 100%; margin-bottom: 40rpx; }
.progress-bar {
  height: 16rpx; background: #e0e0e0; border-radius: 10rpx; overflow: hidden;
  margin-bottom: 10rpx;
}
.progress-inner {
  height: 100%; background: #ff6b81; border-radius: 10rpx;
  transition: width 0.5s ease;
}
.level-text { font-size: 22rpx; color: #8d6e63; display: block; text-align: center; font-weight: 500;}
.max-level { color: #ff6f00; font-weight: bold; }

/* ÊåâÈíÆÊ†∑Âºè */
.btn-water {
  background: #ff6b81; color: #fff;
  border-radius: 44rpx; font-size: 28rpx;
  width: 60% !important; height: 88rpx; line-height: 88rpx;
  padding: 0; margin: 0 auto;
  display: flex; align-items: center; justify-content: center;
  white-space: nowrap;
  box-shadow: 0 6rpx 16rpx rgba(255, 107, 129, 0.3);
}

.btn-harvest {
  background: linear-gradient(45deg, #ffca28, #ff6f00);
  color: #fff;
  border-radius: 44rpx; font-size: 30rpx;
  width: 65% !important; height: 96rpx; line-height: 96rpx;
  padding: 0; margin: 0 auto;
  display: flex; align-items: center; justify-content: center;
  white-space: nowrap;
  box-shadow: 0 8rpx 20rpx rgba(255, 111, 0, 0.3);
  font-weight: bold;
  animation: pulse 2s infinite;
}
@keyframes pulse { 0% { transform: scale(1); } 50% { transform: scale(1.05); } 100% { transform: scale(1); } }

.tip-text { font-size: 20rpx; color: #b0bec5; margin-top: 24rpx; text-align: center; }

/* === ÂÆ´Ê†ºËèúÂçï === */
.grid-menu { display: flex; flex-wrap: wrap; justify-content: space-between; }
.grid-item {
  width: 48%; padding: 30rpx; box-sizing: border-box; margin-bottom: 24rpx;
  display: flex; flex-direction: column;
  align-items: center; justify-content: center;
  position: relative; /* ‰∏∫Â∞èÁ∫¢ÂøÉÂÆö‰Ωç */
}
.grid-icon { font-size: 50rpx; margin-bottom: 10rpx; }
.grid-title { font-size: 26rpx; font-weight: bold; color: #5d4037; }
.grid-desc { font-size: 20rpx; color: #a1887f; margin-top: 4rpx; opacity: 0.8; }

/* üü¢ ÊõøÊç¢Á∫¢ÁÇπ‰∏∫Â∞èÁ∫¢ÂøÉ */
.notification-heart {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  font-size: 24rpx;
  color: #ff5252;
  line-height: 1;
  animation: pulseHeart 1.2s infinite ease-in-out;
  text-shadow: 0 2rpx 5rpx rgba(255, 82, 82, 0.4); /* Â¢ûÂä†‰∏ÄÁÇπÂèëÂÖâÊÑü */
}

@keyframes pulseHeart {
  0% { transform: scale(1); }
  50% { transform: scale(1.25); }
  100% { transform: scale(1); }
