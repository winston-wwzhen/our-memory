/* miniprogram/pages/playground/index.wxss */
page {
  background: #fdfbf7;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', sans-serif;
  padding-bottom: 40rpx;
}

.playground-container {
  padding: 40rpx;
}

/* Â§çÁî®Á∫∏Ë¥®Á∫πÁêÜ */
.paper-texture {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(149, 157, 165, 0.08);
  position: relative;
}

/* === Ëä±Âõ≠/‰πêÂõ≠ Âç°Áâá === */
.garden-card {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
  border: 2rpx dashed #aed9e9;
  background: linear-gradient(180deg, #f0f8ff 0%, #fff 100%);
  position: relative;
}

.card-header {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-title { font-size: 30rpx; font-weight: 800; color: #5d4037; }

/* ÂæΩÁ´† */
.water-badge {
  background: #fff3e0; color: #ef6c00;
  font-size: 22rpx; padding: 6rpx 16rpx;
  border-radius: 20rpx; font-weight: bold;
  flex-shrink: 0;
}
.harvest-badge {
  background: #e8f5e9; color: #2e7d32;
  font-size: 22rpx; padding: 6rpx 16rpx;
  border-radius: 20rpx; font-weight: bold;
  border: 1rpx solid #a5d6a7;
  flex-shrink: 0;
}
.water-info-sub {
  width: 100%; text-align: right;
  font-size: 20rpx; color: #ef6c00;
  margin-top: -10rpx; margin-bottom: 20rpx;
}

/* ËÆ∞ÂΩïÊ∞îÊ≥° */
.log-bubble {
  position: absolute;
  top: 120rpx; 
  left: 40rpx; 
  background: rgba(255, 255, 255, 0.9);
  padding: 8rpx 16rpx;
  border-radius: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  display: flex; align-items: center;
  border: 2rpx solid #fff;
  z-index: 10;
  animation: floatBubble 3s infinite ease-in-out;
}
.bubble-icon { font-size: 24rpx; margin-right: 6rpx; }
.bubble-txt { font-size: 20rpx; color: #8d6e63; font-weight: bold; }

@keyframes floatBubble {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-6rpx); }
}

/* ÂÆ†Áâ©Â±ïÁ§∫Âå∫ */
.plant-stage {
  height: 280rpx; 
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}

.pet-img { 
  width: 260rpx; 
  height: 260rpx;
}

/* Âä®Áîª */
.bounce-anim { animation: bounce 3s infinite ease-in-out; }
.glow-anim {
  filter: drop-shadow(0 0 16rpx rgba(255, 105, 180, 0.6));
  animation: float 3s infinite ease-in-out;
}
.float-anim {
  animation: float 3s infinite ease-in-out;
}

@keyframes bounce { 
  0%, 100% { transform: translateY(0); } 
  50% { transform: translateY(-12rpx); } 
}
@keyframes float { 
  0%, 100% { transform: translateY(0); } 
  50% { transform: translateY(-16rpx); } 
}

/* ËøõÂ∫¶Êù° */
.progress-box { width: 100%; margin-bottom: 40rpx; }
.progress-bar {
  height: 16rpx; background: #e0e0e0; border-radius: 10rpx; overflow: hidden;
  margin-bottom: 10rpx;
}
.progress-inner {
  height: 100%; 
  background: linear-gradient(90deg, #ffd700, #ff8c00);
  border-radius: 10rpx;
  transition: width 0.5s ease;
}
.level-text { 
  font-size: 22rpx;
  color: #8d6e63; display: block; text-align: center; font-weight: 500;
}
.max-level { color: #ff6f00; font-weight: bold; }

/* ÊåâÈíÆÊ†∑Âºè */
.btn-water {
  background: #ffaa00;
  color: #fff;
  border-radius: 44rpx; font-size: 28rpx;
  width: 60% !important; height: 88rpx; line-height: 88rpx;
  padding: 0; margin: 0 auto;
  display: flex;
  align-items: center; justify-content: center;
  white-space: nowrap;
  box-shadow: 0 6rpx 16rpx rgba(255, 170, 0, 0.3);
}

.btn-harvest {
  background: linear-gradient(45deg, #42a5f5, #1e88e5);
  color: #fff;
  border-radius: 44rpx; font-size: 30rpx;
  width: 65% !important; height: 96rpx; line-height: 96rpx;
  padding: 0; margin: 0 auto;
  display: flex; align-items: center; justify-content: center;
  white-space: nowrap;
  box-shadow: 0 8rpx 20rpx rgba(30, 136, 229, 0.3);
  font-weight: bold;
  animation: pulse 2s infinite;
}
@keyframes pulse { 0% { transform: scale(1); } 50% { transform: scale(1.05); } 100% { transform: scale(1); } }

.tip-text { font-size: 20rpx; color: #b0bec5; margin-top: 24rpx; text-align: center; }

/* === ÂÆ´Ê†ºËèúÂçï (3ÂàóÁ¥ßÂáëÂ∏ÉÂ±Ä) === */
.grid-menu { 
  display: flex; 
  flex-wrap: wrap; 
  justify-content: space-between; 
}

.grid-item {
  width: 31%; /* ‰∏ÄË°å‰∏â‰∏™ */
  padding: 24rpx 10rpx; 
  box-sizing: border-box; 
  margin-bottom: 20rpx;
  display: flex; 
  flex-direction: column;
  align-items: center; 
  justify-content: center;
  position: relative;
}

.grid-icon { font-size: 44rpx; margin-bottom: 8rpx; }

.grid-title { 
  font-size: 24rpx; font-weight: bold; color: #5d4037;
  white-space: nowrap; 
}

.grid-desc { 
  font-size: 18rpx; color: #a1887f; 
  margin-top: 2rpx; opacity: 0.8; 
  white-space: nowrap;
  transform: scale(0.9);
}

/* === ÊèêÁ§∫ÂõæÊ†á (ÈÄöÁî®ÂÆö‰Ωç) === */
.notification-heart, .notification-pin, .notification-quiz {
  position: absolute;
  top: 6rpx;
  right: 6rpx;
}

/* ‚ù§ ËÉ∂ÂõäÊèêÁ§∫ */
.notification-heart {
  font-size: 20rpx; color: #ff5252;
  line-height: 1;
  animation: pulseHeart 1.2s infinite ease-in-out;
  text-shadow: 0 2rpx 5rpx rgba(255, 82, 82, 0.4);
}
@keyframes pulseHeart { 0% { transform: scale(1); } 50% { transform: scale(1.25); } 100% { transform: scale(1); } }

/* üìå ÁïôË®ÄÊùøÊèêÁ§∫ */
.notification-pin {
  font-size: 24rpx; line-height: 1;
  animation: swingPin 2s infinite ease-in-out;
  transform-origin: bottom center;
  filter: drop-shadow(2rpx 4rpx 4rpx rgba(0,0,0,0.2));
}
@keyframes swingPin { 
  0% { transform: rotate(0deg); } 25% { transform: rotate(15deg); } 
  50% { transform: rotate(0deg); } 75% { transform: rotate(-15deg); } 
  100% { transform: rotate(0deg); } 
}

/* ‚ùì ÈóÆÁ≠îÊèêÁ§∫ */
.notification-quiz {
  font-size: 20rpx; color: #fff;
  background: #ffb74d;
  width: 30rpx; height: 30rpx;
  line-height: 30rpx; text-align: center;
  border-radius: 50%; font-weight: bold;
  border: 2rpx solid #fff;
  box-shadow: 0 4rpx 8rpx rgba(255, 183, 77, 0.4);
  animation: bounceQuiz 1.5s infinite;
}
@keyframes bounceQuiz { 0%, 100% { transform: translateY(0); } 50% { transform: translateY(-6rpx); } }


/* === ÂºπÁ™óÊ†∑Âºè === */
.log-modal-mask {
  position: fixed; top: 0; left: 0; width: 100%; height: 100%;
  background: rgba(0,0,0,0.5);
  z-index: 100;
  display: flex; justify-content: center; align-items: center;
  visibility: hidden; opacity: 0; transition: all 0.3s;
}
.log-modal-mask.show { visibility: visible; opacity: 1; }

.log-modal-container {
  width: 600rpx; background: #fff; border-radius: 24rpx;
  padding: 30rpx; max-height: 70vh;
  display: flex; flex-direction: column;
  box-shadow: 0 10rpx 40rpx rgba(0,0,0,0.2);
}

.log-modal-header {
  display: flex; justify-content: space-between; align-items: center;
  padding-bottom: 20rpx; border-bottom: 2rpx dashed #eee;
  font-size: 30rpx; font-weight: bold; color: #5d4037;
}
.close-icon { color: #ccc; font-size: 40rpx; line-height: 1; padding: 0 10rpx; }

.log-scroll-view {
  flex: 1; min-height: 300rpx; max-height: 600rpx;
  padding-top: 20rpx;
}

.modal-log-item { display: flex; align-items: flex-start; margin-bottom: 24rpx; }
.modal-log-item:last-child { margin-bottom: 0; }

.modal-log-avatar {
  width: 70rpx; height: 70rpx; border-radius: 50%; margin-right: 20rpx;
  border: 2rpx solid #f0f0f0;
  flex-shrink: 0;
}
.modal-log-content { flex: 1; }
.modal-log-top { display: flex; justify-content: space-between; margin-bottom: 4rpx; }
.modal-log-name { font-size: 24rpx; font-weight: bold; }
.modal-log-name.mine { color: #ff6b81; }
.modal-log-name.partner { color: #03a9f4; }
.modal-log-time { font-size: 20rpx; color: #ccc; }
.modal-log-desc { font-size: 24rpx; color: #666; line-height: 1.4; }

.empty-log { text-align: center; color: #ccc; font-size: 24rpx; margin-top: 100rpx; }

/* === ÂΩ©ËõãÂºπÁ™óÊ†∑Âºè (‰øùÊåÅ‰∏çÂèò) === */
.egg-modal-mask {
  position: fixed; top: 0; left: 0; width: 100%; height: 100%;
  background: rgba(0,0,0,0.8);
  z-index: 200;
  display: flex; justify-content: center; align-items: center;
}
.egg-card {
  width: 560rpx; background: #fff; border-radius: 40rpx;
  padding: 50rpx 40rpx; text-align: center; position: relative;
  overflow: hidden;
}
.bounce-in { animation: bounceIn 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275); }
@keyframes bounceIn { from { opacity: 0; transform: scale(0.3); } to { opacity: 1; transform: scale(1); } }

.card-ribbon {
  position: absolute; top: 20rpx; left: -60rpx;
  background: #ff6b81; color: #fff; transform: rotate(-45deg);
  width: 200rpx; font-size: 20rpx; padding: 4rpx 0; font-weight: bold;
}
.icon-stage { position: relative; display: inline-block; margin-bottom: 30rpx; }
.halo-ring {
  width: 140rpx; height: 140rpx; background: #fff8e1;
  border-radius: 50%; position: absolute; top: 50%; left: 50%;
  transform: translate(-50%, -50%); z-index: 0;
}
.egg-icon { font-size: 100rpx; position: relative; z-index: 1; }
.shine-star { position: absolute; font-size: 30rpx; animation: twinkle 1s infinite; }
.s-left { top: 0; left: -20rpx; }
.s-right { bottom: 0; right: -20rpx; animation-delay: 0.5s; }
@keyframes twinkle { 0%,100% { opacity: 1; } 50% { opacity: 0.3; } }

.egg-title { font-size: 40rpx; font-weight: 800; color: #ff6f00; margin-bottom: 16rpx; }
.egg-desc { font-size: 26rpx; color: #8d6e63; margin-bottom: 40rpx; line-height: 1.5; }

.egg-reward-box {
  background: #fff3e0; border-radius: 20rpx; padding: 20rpx;
  margin-bottom: 40rpx; border: 2rpx dashed #ffe082;
}
.reward-label { font-size: 22rpx; color: #ff8f00; display: block; margin-bottom: 10rpx; }
.reward-val-row { display: flex; justify-content: center; align-items: baseline; }
.val-num { font-size: 48rpx; font-weight: 900; color: #ff6f00; margin-right: 8rpx; }
.val-unit { font-size: 24rpx; color: #ffca28; font-weight: bold; }

.btn-get-egg {
  background: #ff6b81; color: #fff; border-radius: 50rpx;
  font-weight: bold; font-size: 30rpx; padding: 20rpx 0;
  box-shadow: 0 8rpx 20rpx rgba(255, 107, 129, 0.4);
}

/* Á∫∏Â±ëÂä®ÁîªÂÆπÂô® */
.confetti-container { position: absolute; top:0; left:0; width:100%; height:100%; pointer-events: none; }
.confetti { position: absolute; width: 10rpx; height: 10rpx; background: #f00; animation: fall 3s linear infinite; }
.c1 { left: 10%; background: #ffd700; animation-duration: 2.5s; }
.c2 { left: 30%; background: #ff6b81; animation-duration: 3s; animation-delay: 0.5s; }
.c3 { left: 70%; background: #42a5f5; animation-duration: 2.8s; }
.c4 { left: 50%; background: #66bb6a; animation-duration: 3.2s; animation-delay: 1s; }
@keyframes fall {
  0% { transform: translateY(-20rpx) rotate(0deg); opacity: 1; }
  100% { transform: translateY(100vh) rotate(720deg); opacity: 0; }
}