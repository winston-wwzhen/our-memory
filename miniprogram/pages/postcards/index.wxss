/* miniprogram/pages/postcards/index.wxss */
page {
  background: #fdfbf7;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', sans-serif;
}

.postcards-container {
  padding: 20rpx;
  padding-bottom: 40rpx;
  min-height: 100vh;
}

/* Statistics Summary */
.stats-summary {
  display: flex;
  padding: 30rpx;
  margin-bottom: 30rpx;
  justify-content: space-around;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #ff6b81;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background: #f0f0f0;
}

/* Paper Texture */
.paper-texture {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(149, 157, 165, 0.08);
  position: relative;
}

/* Loading State */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* Empty State */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.start-travel-btn {
  background: linear-gradient(135deg, #ff9a9e, #ff6b81);
  color: #fff;
  font-size: 28rpx;
  padding: 20rpx 60rpx;
  border-radius: 40rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 129, 0.3);
  display: flex;
  align-items: center;      /* 垂直居中 */
  justify-content: center;  /* 水平居中 */
  line-height: normal;      /* 重置默认行高干扰 */
  padding: 0;
}

/* Postcards Scroll */
.postcards-scroll {
  height: calc(100vh - 340rpx);
}

/* Timeline View */
.timeline-view {
  padding-left: 20rpx;
}

.timeline-item {
  display: flex;
  margin-bottom: 40rpx;
}

/* Time Node */
.time-node {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 30rpx;
  position: relative;
}

.dot {
  width: 20rpx;
  height: 20rpx;
  background: #ff6b81;
  border-radius: 50%;
  z-index: 1;
  box-shadow: 0 0 0 4rpx rgba(255, 107, 129, 0.2);
}

.line {
  width: 2rpx;
  height: 100%;
  background: #f0f0f0;
  position: absolute;
  top: 20rpx;
}

/* Postcard Card */
.postcard-card {
  flex: 1;
  padding: 0;
  overflow: hidden;
  position: relative;
  max-width: 600rpx;
}

.postcard-image {
  width: 100%;
  height: 200rpx;
  background: #f5f5f5;
}

.postcard-content {
  padding: 24rpx;
  padding-bottom: 60rpx;
  position: relative;
}

.postcard-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.destination-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.travel-date {
  font-size: 24rpx;
  color: #999;
}

.postcard-message {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

/* Rewards Section */
.rewards-section {
  margin-bottom: 16rpx;
}

.rewards-title {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.rewards-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.reward-item {
  display: flex;
  align-items: center;
  background: #f8f8f8;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.reward-icon {
  font-size: 20rpx;
  margin-right: 6rpx;
}

.reward-text {
  font-size: 22rpx;
  color: #666;
}

/* Specialty Item */
.specialty-item {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #ffeaa7, #fdcb6e);
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  align-self: flex-start;
}

.specialty-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.specialty-name {
  font-size: 24rpx;
  color: #2d3436;
  font-weight: 500;
}

/* Like Button */
.like-btn {
  position: absolute;
  bottom: 16rpx;
  right: 16rpx;
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  background: #f5f5f5;
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.like-btn.liked {
  background: #ffe0e0;
}

.like-icon {
  font-size: 24rpx;
  margin-right: 6rpx;
}

.like-count {
  font-size: 22rpx;
  color: #666;
}

/* Detail Modal */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.modal-mask.show {
  opacity: 1;
  visibility: visible;
}

.detail-modal {
  width: 90%;
  max-width: 700rpx;
  max-height: 80vh;
  padding: 0;
  border-radius: 24rpx;
  overflow: hidden;
  animation: modalSlideIn 0.3s ease;
}

@keyframes modalSlideIn {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #999;
  background: #f5f5f5;
  border-radius: 50%;
}

/* Modal Content */
.modal-content {
  padding: 0;
  max-height: 60vh;
  overflow-y: auto;
}

.modal-postcard-image {
  width: 100%;
  height: 300rpx;
}

.postcard-detail {
  padding: 30rpx;
}

.detail-destination {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 8rpx;
}

.detail-date {
  display: block;
  font-size: 26rpx;
  color: #999;
  text-align: center;
  margin-bottom: 30rpx;
}

.detail-message {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  text-align: center;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
}

/* Detail Sections */
.detail-section {
  margin-bottom: 30rpx;
}

.detail-section-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.detail-info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  background: #f8f8f8;
  padding: 20rpx;
  border-radius: 12rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
}

.info-label {
  color: #999;
}

.info-value {
  color: #333;
  font-weight: 500;
}

/* Rewards Grid */
.rewards-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(160rpx, 1fr));
  gap: 16rpx;
}

.reward-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}

.reward-card .reward-icon {
  font-size: 36rpx;
  margin-bottom: 8rpx;
}

.reward-name {
  font-size: 24rpx;
  color: #333;
  margin-bottom: 4rpx;
}

.reward-count {
  font-size: 22rpx;
  color: #999;
}

/* Specialty Showcase */
.specialty-showcase {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx;
  background: linear-gradient(135deg, #ffeaa7, #fdcb6e);
  border-radius: 16rpx;
}

.specialty-icon-large {
  font-size: 48rpx;
  margin-right: 16rpx;
}

.specialty-name-large {
  font-size: 28rpx;
  color: #2d3436;
  font-weight: bold;
}

/* Modal Actions */
.modal-actions {
  display: flex;
  padding: 20rpx 30rpx 30rpx;
  gap: 20rpx;
}

.modal-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  border-radius: 40rpx;
  border: none;
  display: flex;
  align-items: center;      /* 垂直居中 */
  justify-content: center;  /* 水平居中 */
  line-height: 1;           /* 紧凑行高，避免文字偏上 */
  padding: 0;
}

.modal-btn text, 
.start-travel-btn text {
  display: inline-block; /* 或者是 block */
  line-height: 1;        /* 确保文字自身没有额外的行高偏移 */
}

.share-btn {
  background: #1aad19;
  color: #fff;
  font-weight: 500;
}

.save-btn {
  background: #576b95;
  color: #fff;
  font-weight: 500;
}

/* Share Action Sheet */
action-sheet {
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
}

action-sheet-item {
  font-size: 30rpx;
  color: #333;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

action-sheet-cancel {
  color: #999;
}