/* miniprogram/pages/album/index.wxss */
.album-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
  padding: 40rpx 30rpx;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.stats {
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 30rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-num {
  font-size: 48rpx;
  font-weight: bold;
  color: #ff6b81;
  display: block;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background: #e0e0e0;
  margin: 0 40rpx;
}

.album-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
}

.empty-album {
  grid-column: span 2;
  text-align: center;
  padding: 120rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.5;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  display: block;
  margin-bottom: 20rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f0f0f0;
  border-top-color: #ff6b81;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* 优化卡片动画 */
.memory-card {
  animation: fadeInUp 0.5s ease-out;
  animation-fill-mode: both;
}

.memory-card:nth-child(1) { animation-delay: 0.05s; }
.memory-card:nth-child(2) { animation-delay: 0.1s; }
.memory-card:nth-child(3) { animation-delay: 0.15s; }
.memory-card:nth-child(4) { animation-delay: 0.2s; }
.memory-card:nth-child(5) { animation-delay: 0.25s; }
.memory-card:nth-child(6) { animation-delay: 0.3s; }

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.memory-card {
  animation: fadeInUp 0.5s ease forwards;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.card-border {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease;
  position: relative;
}

.card-border:active {
  transform: scale(0.95);
}

.postcard-img {
  width: 100%;
  height: 280rpx;
  object-fit: cover;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.postcard-img.loaded {
  opacity: 1;
}

/* 加载占位符 */
.loading-placeholder {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 280rpx;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  pointer-events: none; /* 让点击事件穿透 */
}

.loading-animation {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e0e0e0;
  border-top-color: #ff6b81;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.memory-info {
  padding: 20rpx;
}

.memory-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.memory-date {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 预览模态框 */
.preview-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s ease;
}

.preview-modal.show {
  visibility: visible;
  opacity: 1;
}

.preview-container {
  width: 90%;
  max-width: 600rpx;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  transform: scale(0.8);
  transition: transform 0.3s ease;
}

.preview-modal.show .preview-container {
  transform: scale(1);
}

.preview-img {
  width: 100%;
  height: 400rpx;
  object-fit: contain;
  background: #f5f5f5;
}

.preview-info {
  padding: 30rpx;
  text-align: center;
}

.preview-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.preview-date {
  font-size: 26rpx;
  color: #999;
}

.btn-share {
  margin: 30rpx;
  background: #ff6b81;
  color: white;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
}

.share-icon {
  margin-right: 10rpx;
}