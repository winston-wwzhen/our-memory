/* index.wxss - 浪漫手账风 */
page {
  /* 柔和的暖色渐变背景，像清晨的霞光 */
  background: linear-gradient(135deg, #fff1eb 0%, #ace0f9 100%);
  font-family: -apple-system, 'Helvetica Neue', sans-serif;
  overflow: hidden; /* 防止背景光晕溢出 */
}

.journal-container {
  position: relative;
  height: 100vh;
  width: 100%;
}

/* 背景氛围光晕 */
.ambient-light {
  position: absolute;
  border-radius: 50%;
  filter: blur(80rpx);
  opacity: 0.4;
  z-index: 1;
}
.top-light {
  width: 400rpx;
  height: 400rpx;
  background: #ffcad4;
  top: -100rpx;
  left: -100rpx;
}
.bottom-light {
  width: 500rpx;
  height: 500rpx;
  background: #b5e2fa;
  bottom: -150rpx;
  right: -150rpx;
}

.content-wrapper {
  position: relative;
  z-index: 10; /* 确保内容在光晕上方 */
  display: flex;
  flex-direction: column;
  height: 100%;
  padding: 40rpx;
  box-sizing: border-box;
  justify-content: space-between;
}

/* === 任务便签区 === */
.task-note-container {
  position: relative;
  margin-top: 30rpx;
}

/* 模拟和纸胶带 */
.washi-tape {
  position: absolute;
  height: 24rpx;
  width: 100rpx;
  background-color: rgba(255, 255, 255, 0.6);
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
  z-index: 20;
}
.tape-top-left {
  top: -10rpx;
  left: 20rpx;
  transform: rotate(-5deg);
  background-image: linear-gradient(45deg, rgba(255,255,255,0.2) 25%, transparent 25%, transparent 50%, rgba(255,255,255,0.2) 50%, rgba(255,255,255,0.2) 75%, transparent 75%, transparent);
  background-size: 10rpx 10rpx;
}

.task-note {
  background: #fffaf0; /* 米黄色纸张感 */
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 2rpx 4rpx 12rpx rgba(0,0,0,0.08);
  transform: rotate(-1deg); /* 微微倾斜，更随意 */
  border: 2rpx dashed #e0d6c6; /* 虚线边框 */
}

.note-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}
.note-icon { font-size: 40rpx; margin-right: 16rpx; }
.note-title { font-size: 32rpx; font-weight: bold; color: #5a5a5a; }
.note-desc { font-size: 28rpx; color: #7a7a7a; line-height: 1.5; }
.note-footer {
  margin-top: 24rpx;
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  color: #999;
}
.difficulty-tag {
  background: #ffe4e8;
  color: #ff6b81;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

/* === 拍立得相框区 === */
.polaroid-frame {
  background: white;
  padding: 24rpx 24rpx 70rpx 24rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.15);
  transform: rotate(1.5deg); /* 向另一侧倾斜 */
  margin: 30rpx 0;
  transition: all 0.3s ease;
}

/* 处理中的呼吸灯特效 - 更柔和 */
.developing-pulse {
  animation: softPulse 2s infinite ease-in-out;
}
@keyframes softPulse {
  0% { box-shadow: 0 10rpx 30rpx rgba(255, 182, 193, 0.3); }
  50% { box-shadow: 0 15rpx 40rpx rgba(255, 182, 193, 0.7); transform: rotate(1.5deg) scale(1.01); }
  100% { box-shadow: 0 10rpx 30rpx rgba(255, 182, 193, 0.3); }
}

.photo-area {
  width: 100%;
  height: 580rpx;
  background-color: #f8f8f8;
  overflow: hidden;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 2rpx solid #eee;
}

.the-photo { width: 100%; height: 100%; object-fit: cover; }

/* CSS画的占位相机 */
.placeholder-state { display: flex; flex-direction: column; align-items: center; opacity: 0.6; }
.css-camera-icon { margin-bottom: 20rpx; }
.cam-body {
  width: 100rpx; height: 70rpx; background: #d0d0d0; border-radius: 10rpx; position: relative;
}
.cam-lens {
  width: 40rpx; height: 40rpx; background: #eef; border: 6rpx solid #fff; border-radius: 50%;
  position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);
  box-shadow: inset 0 0 10rpx rgba(0,0,0,0.1);
}
.cam-flash {
  width: 12rpx; height: 8rpx; background: #fff; position: absolute; top: 10rpx; right: 14rpx; border-radius: 2rpx;
}
.placeholder-text { font-size: 26rpx; color: #999; letter-spacing: 1rpx; }

.handwriting-caption {
  margin-top: 30rpx;
  text-align: center;
  /* 尝试使用系统自带的手写风格字体作为回退 */
  font-family: 'Bradley Hand', 'Brush Script MT', cursive, sans-serif;
  font-size: 34rpx;
  color: #555;
}
.success-text { color: #ff6b81; }

/* === 底部操作区 === */
.action-bar {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 40rpx;
}

.shutter-button {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  /* 渐变按钮背景 */
  background: linear-gradient(135deg, #ff9a9e 0%, #fad0c4 100%);
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0;
  border: none;
  box-shadow: 0 12rpx 24rpx rgba(255, 154, 158, 0.4);
  transition: all 0.2s cubic-bezier(0.25, 0.8, 0.25, 1);
  position: relative;
}

.shutter-inner {
  width: 60rpx; height: 60rpx; border-radius: 50%; border: 6rpx solid white;
}

.shutter-hover {
  transform: scale(0.92);
  box-shadow: 0 6rpx 12rpx rgba(255, 154, 158, 0.3);
}

.action-hint {
  margin-top: 20rpx;
  font-size: 22rpx;
  color: #fff; /* 在深色渐变背景上用白色字 */
  text-shadow: 0 1rpx 2rpx rgba(0,0,0,0.2);
  letter-spacing: 2rpx;
  text-transform: uppercase;
  opacity: 0.8;
}

.confirm-actions {
  display: flex;
  align-items: center;
  justify-content: space-around; /* 分散对齐 */
  width: 100%;
  padding: 0 40rpx;
  box-sizing: border-box;
}

/* 垂直排列的图标按钮容器 */
.action-btn-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

/* 圆形图标按钮 */
.btn-icon {
  width: 80rpx !important;
  height: 80rpx !important;
  border-radius: 50% !important;
  background: #f0f2f5 !important;
  display: flex !important;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  padding: 0 !important;
  margin: 0 !important;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.05);
  color: #333;
}

/* 按钮下方的文字 */
.btn-label {
  font-size: 20rpx;
  color: #999;
  margin-top: 10rpx;
  font-weight: 500;
}

/* 主确认按钮 - 胶囊形状，更突出 */
.btn-confirm-main {
  background: #333 !important;
  color: #fff !important;
  border-radius: 40rpx !important;
  padding: 0 60rpx !important;
  height: 80rpx !important;
  line-height: 80rpx !important;
  font-size: 28rpx !important;
  font-weight: bold;
  box-shadow: 0 8rpx 16rpx rgba(0,0,0,0.2);
  margin: 0 0 0 30rpx !important; /* 离左边按钮远一点 */
}

/* 异地小贴士样式 */
.remote-tip-box {
  margin-top: 16rpx;
  background-color: #f0f7ff; /* 浅蓝色背景，以此区分 */
  padding: 12rpx 16rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
}

.remote-icon {
  font-size: 24rpx;
  margin-right: 10rpx;
}

.remote-text {
  font-size: 22rpx;
  color: #6a8bad; /* 较深的蓝色文字 */
  line-height: 1.4;
}
